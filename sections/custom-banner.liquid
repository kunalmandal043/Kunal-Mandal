{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    { "type": "text", "id": "title", "label": "Main Title", "default": "The Gift Guide" },
    { "type": "textarea", "id": "subtitle", "label": "Subtitle", "default": "Discover Joy: Your Ultimate Holiday Gift Destination." },
    { "type": "text", "id": "top_note", "label": "Top Note", "default": "Find the ideal gift for your loved ones." },
    { "type": "text", "id": "bottom_note", "label": "Bottom Note", "default": "SUSTAINABLE. ETHICALLY MADE CLOTHES IN SIZES XXS TO 4XL" },
    { "type": "url", "id": "button_link", "label": "Button Link" },
    { "type": "text", "id": "button_label", "label": "Button Label", "default": "CHOOSE GIFT" }
  ],
  "presets": [{ "name": "Custom Banner" }]
}
{% endschema %}

{{ 'custom-banner.css' | asset_url | stylesheet_tag }}
<section class="custom-banner">
  <!-- Header bar -->
  <div class="banner-head">
    <div class="banner-head__left">
      <span class="brand">TISSO VISON</span>
    </div>
    <p class="banner-head__center">{{ section.settings.top_note }}</p>
    <div class="banner-head__right">
      <a href="{{ section.settings.button_link }}" class="banner-cta">
        {{ section.settings.button_label }}
        <span class="banner-cta__icon" aria-hidden="true">â†’</span>
      </a>
    </div>
  </div>

  <!-- Body -->
  <h1 class="banner-title">{{ section.settings.title }}</h1>
  <p class="banner-sub">{{ section.settings.subtitle }}</p>
  <a href="{{ section.settings.button_link }}" class="banner-btn">
    {{ section.settings.button_label }}
  </a>
  <p class="banner-bottom">{{ section.settings.bottom_note }}</p>
</section>
