{% comment %}
  File: sections/gift-guide-banner.liquid
  Purpose: One-file banner with inline CSS + background image from assets/img/bg-img.jpg
{% endcomment %}

<section class="gift-banner" style="--bg:url('{{ 'img/bg-img.jpg' | asset_url }}');">
  <style>
    .gift-banner{
      position:relative; isolation:isolate;
      background-image:var(--bg);
      background-size:cover; background-position:center; background-repeat:no-repeat;
      padding:24px 24px 56px;
    }
    .gift-banner__bar{
      display:flex; align-items:center; justify-content:space-between; gap:16px;
      background:#efefef; padding:10px 16px; border-radius:4px;
    }
    .gift-banner__logo{ font-weight:700; letter-spacing:.06em; }
    .gift-banner__eyebrow{ margin:0 auto; font-size:14px; opacity:.9; }
    .gift-banner__cta-top a{
      display:inline-flex; align-items:center; gap:8px; padding:12px 18px;
      background:#ffe45c; color:#111; border:1.5px solid #111; border-radius:4px;
      transition: transform .2s ease, filter .2s ease;
    }
    .gift-banner__cta-top a:hover{ transform:translateY(-2px); filter:brightness(.95); }

    .gift-banner__inner{ max-width:1120px; margin:80px auto 0; }
    .gift-banner__title{ font-size:72px; line-height:.95; margin:0 0 20px; }
    .gift-banner__sub{ max-width:540px; background:#fff; border:2px solid #111; padding:18px 22px; }
    .gift-banner__actions{ margin:24px 0 32px; }
    .gift-banner__actions .btn{
      display:inline-block; padding:14px 24px; border:2px solid #111; border-radius:4px;
      transition: transform .2s ease, background-color .2s ease, color .2s ease;
    }
    .gift-banner__actions .btn--primary{ background:#111; color:#fff; }
    .gift-banner__actions .btn--primary:hover{ transform:translateY(-2px); background:#000; }
    .gift-banner__tagline{
      position:sticky; bottom:0; text-align:center; background:#eee; border-top:2px solid #111;
      padding:8px 12px; letter-spacing:.02em;
    }

    @media (max-width: 749px){
      .gift-banner{ padding:16px 16px 40px; }
      .gift-banner__inner{ margin-top:40px; }
      .gift-banner__title{ font-size:42px; }
      .gift-banner__sub{ font-size:14px; }
      .gift-banner__bar{ flex-wrap:wrap; gap:8px; }
    }
  </style>

  <div class="gift-banner__bar">
    <div class="gift-banner__logo">{{ section.settings.logo_text }}</div>
    <p class="gift-banner__eyebrow">{{ section.settings.eyebrow }}</p>
    <div class="gift-banner__cta-top">
      <a href="{{ section.settings.secondary_link }}">{{ section.settings.secondary_label }}</a>
    </div>
  </div>

  <div class="gift-banner__inner">
    <h1 class="gift-banner__title">{{ section.settings.heading }}</h1>
    <div class="gift-banner__sub">{{ section.settings.subheading }}</div>
    <div class="gift-banner__actions">
      <a class="btn btn--primary" href="{{ section.settings.primary_link }}">{{ section.settings.primary_label }}</a>
    </div>
  </div>

  <p class="gift-banner__tagline">{{ section.settings.tagline }}</p>

  {% schema %}
  {
    "name": "Gift guide banner (single file)",
    "tag": "section",
    "class": "gift-banner-section",
    "settings": [
      { "type":"text", "id":"logo_text", "label":"Logo text", "default":"TISSO VISON" },
      { "type":"text", "id":"eyebrow", "label":"Eyebrow copy", "default":"Find the ideal gift for your loved ones." },
      { "type":"text", "id":"heading", "label":"Main heading", "default":"The Gift Guide" },
      { "type":"richtext", "id":"subheading", "label":"Subheading", "default":"<p>Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season.</p>" },
      { "type":"text", "id":"primary_label", "label":"Primary button label", "default":"SHOP NOW" },
      { "type":"url",  "id":"primary_link",  "label":"Primary button link" },
      { "type":"text", "id":"secondary_label", "label":"Top right button label", "default":"CHOOSE GIFT" },
      { "type":"url",  "id":"secondary_link",  "label":"Top right button link" },
      { "type":"text", "id":"tagline", "label":"Bottom tagline", "default":"SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL" }
    ],
    "presets": [{ "name":"Gift guide banner" }]
  }
  {% endschema %}
</section>
