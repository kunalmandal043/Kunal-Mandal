/* custom-grid.css */
.custom-grid {
  padding: 40px 20px;
  text-align: center;
  max-width: 1200px;
  margin: 0 auto;
}

.heading {
  font-family: "Lustria", serif;
  font-weight: 400;
  font-size: 36px;
  line-height: 120%;
  text-align: left;
  margin: 0 0 20px 0;
}

.grid-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 8px;
}

.grid-item {
  position: relative;
  cursor: pointer;
}

.grid-image-wrapper {
  position: relative;
  overflow: hidden;
  border-radius: 8px;
}

.grid-image {
  width: 100%;
  height: auto;
  aspect-ratio: 433/444;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.grid-item:hover .grid-image {
  transform: scale(1.05);
}

.popup-icon {
  position: absolute;
  bottom: 10px;
  right: 10px;
  width: 32px;
  height: 32px;
  border-radius: 50%;
  background: white;
  border: none;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  z-index: 10;
  transition: transform 0.2s ease;
}

.popup-icon:hover {
  transform: scale(1.1);
}

.popup-icon img {
  width: 22px;
  height: 22px;
}

/* Popup Styles */
.popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 20px;
  box-sizing: border-box;
}

.popup.hidden {
  display: none;
}

.popup-content {
  background: white;
  border-radius: 12px;
  padding: 30px;
  max-width: 800px;
  width: 100%;
  max-height: 90vh;
  overflow-y: auto;
  position: relative;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
}

.close-button {
  position: absolute;
  top: 15px;
  right: 15px;
  font-size: 28px;
  cursor: pointer;
  width: 30px;
  height: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: background-color 0.2s;
}

.close-button:hover {
  background-color: #f5f5f5;
}

/* Popup Top Section */
.popup-top {
  display: flex;
  gap: 30px;
  margin-bottom: 25px;
}

.popup-image-container {
  flex: 0 0 40%;
}

.popup-image-container img {
  width: 100%;
  height: auto;
  border-radius: 8px;
  object-fit: cover;
}

.popup-details {
  flex: 1;
  text-align: left;
}

.popup-details h2 {
  font-size: 24px;
  margin: 0 0 15px 0;
  color: #333;
}

.price {
  font-size: 20px;
  font-weight: 600;
  color: #2c5aa0;
  margin: 0 0 15px 0;
}

.description {
  line-height: 1.6;
  color: #666;
}

.description p {
  margin: 0 0 15px 0;
}

.description p:last-child {
  margin-bottom: 0;
}

/* Popup Bottom Section */
.popup-bottom {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.popup-option {
  display: flex;
  flex-direction: column;
  text-align: left;
  gap: 8px;
}

.popup-option label {
  font-weight: 600;
  color: #333;
}

.option-select {
  padding: 12px 15px;
  border: 1px solid #ddd;
  border-radius: 6px;
  font-size: 16px;
  background-color: #fff;
  cursor: pointer;
}

.add-to-cart-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  background: #000;
  color: #fff;
  font-size: 16px;
  font-weight: 600;
  padding: 15px 25px;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  transition: background 0.3s ease;
  margin-top: 10px;
}

.add-to-cart-btn:hover {
  background: #333;
}

/* Responsive Design */
@media (max-width: 900px) {
  .popup-top {
    flex-direction: column;
  }
  
  .popup-image-container {
    flex: none;
    max-width: 300px;
    margin: 0 auto;
  }
}

@media (max-width: 768px) {
  .grid-container {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .heading {
    font-size: 28px;
  }
  
  .popup-content {
    padding: 20px;
  }
  
  .popup-top {
    gap: 20px;
  }
  
  .popup-details h2 {
    font-size: 20px;
  }
}

@media (max-width: 480px) {
  .custom-grid {
    padding: 20px 15px;
  }
  
  .grid-container {
    grid-template-columns: 1fr;
    gap: 15px;
  }
  
  .popup-content {
    padding: 15px;
  }
  
  .add-to-cart-btn {
    padding: 12px 20px;
  }
  
  .add-to-cart-btn img {
    width: 24px;
    height: 24px;
  }
}