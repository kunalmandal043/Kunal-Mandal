/* Section */
.custom-grid{padding:40px 20px;text-align:center;max-width:1200px;margin:0 auto;}
.heading{width:372px;height:43px;font-family:"Lustria",serif;font-weight:400;font-size:36px;line-height:120%;text-align:left;margin:0 0 20px 0;}

/* Grid */
.grid-container{display:grid;grid-template-columns:repeat(3,1fr);gap:4px;}
.grid-item{padding:4px;display:inline-block;}
.grid-image-wrapper{position:relative;display:inline-block;}
.grid-item .grid-image{width:100%;max-width:433px;height:auto;object-fit:cover;display:block;margin:0 auto;}
.grid-item .popup-icon{position:absolute;bottom:30%;right:45%;width:22px;height:22px;cursor:pointer;z-index:2;}

@media (max-width:768px){
  .heading{width:248px;font-size:24px;line-height:120%;text-align:center;margin:0 auto 20px;}
  .grid-container{grid-template-columns:repeat(2,1fr);gap:12px;}
  .grid-item .grid-image{max-width:100%;}
  .grid-item .popup-icon{width:16px;height:16px;}
}

/* Modal overlay */
.popup{position:fixed;inset:0;background:rgba(0,0,0,.6);display:flex;align-items:center;justify-content:center;z-index:9999;} /* two-column modal container [12][10] */
.popup.hidden{display:none;}
.popup-content{background:#fff;border-radius:10px;position:relative;width:min(720px,95vw);max-height:90vh;overflow:auto;padding:24px;text-align:left;} /* desktop width for two columns [10] */
#popup-close{position:absolute;top:12px;right:14px;border:0;background:none;font-size:24px;cursor:pointer;}

/* Two-column quick view */
.qv{display:flex;gap:16px;align-items:flex-start;} /* left/right layout [11] */
.qv-media{flex:0 0 42%;max-width:42%;}
.qv-media img{display:block;width:100%;height:auto;border-radius:4px;object-fit:cover;}
.qv-info{flex:1 1 0;min-width:0;display:flex;flex-direction:column;}

/* Typography */
.qv-title{margin:0 0 6px 0;font-size:28px;font-weight:400;letter-spacing:.01em;}
.qv-price{margin:0 0 10px 0;font-size:24px;font-weight:600;}
.qv-desc{margin:0 0 14px 0;color:#2b2b2b;line-height:1.45;}

/* Fields */
.qv-field{margin:0 0 14px 0;}
.qv-label{font-size:16px;color:#555;margin:0 0 8px 0;}

/* Color swatches row (two options with divider) */
.qv-swatches{display:grid;grid-template-columns:1fr 1fr;border:1px solid #cfcfcf;border-radius:2px;overflow:hidden;}
.qv-swatches .swatch{appearance:none;background:#fff;border:0;padding:14px 16px;text-align:left;font-size:22px;cursor:pointer;}
.qv-swatches .swatch + .swatch{border-left:2px solid #1a1a1a;} /* center divider */
.qv-swatches .is-active{outline:3px solid #000;outline-offset:-3px;}

/* Size select with chevron box */
.qv-size{display:grid;grid-template-columns:1fr auto;}
.qv-size select{appearance:none;border:1px solid #cfcfcf;padding:14px 16px;font-size:20px;background:#fff;}
.qv-size .chev{display:grid;place-items:center;padding:0 18px;border:1px solid #cfcfcf;border-left:0;font-size:22px;background:#fff;}

/* Add to Cart */
.qv-add{margin-top:18px;width:100%;display:flex;justify-content:center;align-items:center;gap:16px;padding:16px 18px;background:#000;color:#fff;border:0;border-radius:2px;letter-spacing:.02em;cursor:pointer;}
.qv-add:hover{background:#1a1a1a;}

@media (max-width:640px){
  .qv{flex-direction:column;} /* stack only on small screens [10] */
  .qv-media{flex-basis:auto;max-width:100%;}
}
