.custom-grid {
  padding: 40px 20px;
  text-align: center;
  max-width: 1200px;
  margin: 0 auto;
}

/* Section Heading */
.heading {
  width: 372px;
  height: 43px;
  font-family: "Lustria", serif;
  font-weight: 400;
  font-size: 36px;
  line-height: 120%;
  text-align: left;
  margin: 0 0 20px 0;
}

/* Grid Container */
.grid-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 6px;
  margin-top: 20px;
}

/* Grid Items */
.grid-item {
  padding: 10px;
  
  display: inline-block;
}

.grid-image-wrapper {
  position: relative;
  display: inline-block;
}

/* Grid Images */
.grid-item .grid-image {
  width: 100%;
  max-width: 433px;
  height: auto;
  object-fit: cover;
  display: block;
  margin: 0 auto;
}

/* Overlay */
.popup {
  position: fixed;
  top: 0; left: 0;
  width: 100%; height: 100%;
  background: rgba(0,0,0,0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.popup.hidden { display: none; }

.popup-content {
  background: #fff;
  padding: 20px;
  max-width: 900px;
  width: 90%;
  border-radius: 10px;
  text-align: left;
  position: relative;
  display: flex;
  flex-direction: column;
  gap: 20px;
}

#popup-close {
  position: absolute;
  top: 10px; right: 15px;
  font-size: 24px;
  cursor: pointer;
}

/* Top section: image + details */
.popup-top {
  display: flex;
  flex-direction: row;
  gap: 20px;
}

.popup-top img {
  width: 400px;
  height: 400px;
  object-fit: cover;
  border-radius: 8px;
}

.popup-details {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

/* Bottom section: options + button */
.popup-bottom {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.popup-option {
  display: flex;
  flex-direction: column;
  gap: 5px;
}

#add-to-cart {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #000;
  color: #fff;
  padding: 12px 24px;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  gap: 10px;
  transition: background 0.3s ease;
}

#add-to-cart:hover {
  background: #333;
}

/* Responsive */
@media (max-width: 768px) {
  .popup-top {
    flex-direction: column;
    align-items: center;
  }

  .popup-top img {
    width: 100%;
    height: auto;
  }

  .popup-details {
    text-align: center;
  }
}
