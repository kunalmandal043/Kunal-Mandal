/* --- Global --- */
.hidden {
  display: none !important;
}

.custom-grid {
  padding: 40px 20px;
  text-align: center;
  max-width: 1200px;
  margin: 0 auto;
}

.heading {
  font-family: "Lustria", serif;
  font-weight: 400;
  font-size: 36px;
  line-height: 120%;
  text-align: left;
  margin: 0 0 20px 0;
}

.grid-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 8px;
}

.grid-item {
  position: relative;
}

.grid-image-wrapper {
  position: relative;
  overflow: hidden;
}

.grid-image {
  width: 100%;
  height: auto;
  object-fit: cover;
}

.popup-icon {
  position: absolute;
  bottom: 30%;
  right: 60%;
  width: 22px;
  height: 22px;
  cursor: pointer;
  z-index: 4;
  background: white;
  border-radius: 50%;
  padding: 4px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.2);
}

/* --- Popup --- */
.popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  padding: 20px;
  box-sizing: border-box;
  transition: opacity 0.4s ease, transform 0.4s ease;
}

.popup-content {
  background: white;
  padding: 30px;
  width: 100%;
  max-width: 400px;
  max-height: 95vh;
  overflow-y: auto;
  position: relative;
  box-sizing: border-box;
}

#popup-close {
  position: absolute;
  top: 15px;
  right: 15px;
  font-size: 24px;
  cursor: pointer;
  color: #333;
}

/* --- Popup top --- */
.popup-top {
  display: flex;
  flex-direction: row;
  gap: 20px;
  margin-bottom: 20px;
}

.popup-top img#popup-image {
  width: 50%;
  max-width: 250px;
  height: auto;
  object-fit: cover;
}

.popup-details {
  flex: 1;
  text-align: left;
}

.popup-details h2 {
  font-family: 'Jost', sans-serif;
  font-weight: 300;
  font-size: 16px;
  margin-bottom: 10px;
}

.popup-details p {
  margin-bottom: 10px;
  font-family: 'Jost', sans-serif;
  font-weight: 300;
  font-size: 12px;
}

/* --- Color swatches with left strip --- */
.color-swatches {
  display: flex;
  flex-direction: column;
  gap: 6px;
  width: 100%;
  margin-top: 8px;
}

.color-option {
  display: flex;
  align-items: center;
  width: 100%;
  border: 1px solid #ddd;
  padding: 10px 15px 10px 40px; /* leave space for strip */
  text-align: left;
  cursor: pointer;
  position: relative;
  transition: all 0.2s ease;
}

.color-option:hover {
  background: #f9f9f9;
}

.color-option.selected {
  background: #000; /* black when selected */
  color: #fff;
  border-color: #000;
}

/* Thin vertical strip always visible */
.color-swatch {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 20px;  /* thin strip */
  background-color: #ccc;
  border-right: 1px solid #ddd;
}

/* Make sure the strip stays visible when selected */
.color-option.selected .color-swatch {
  border-right: 1px solid #fff;
}

.color-name {
  font-size: 14px;
  font-weight: 400;
}

/* --- Bottom Section --- */
.popup-bottom {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.popup-option {
  display: flex;
  flex-direction: column;
  text-align: left;
}

.popup-option label {
  margin-bottom: 6px;
  font-weight: 500;
}

.popup-option select {
  padding: 12px 20px;
  border: 1px solid #ddd;
  cursor: pointer;
  font-size: 16px;
  width: 100%;
  box-sizing: border-box;
}

#add-to-cart {
  background: #000;
  color: #fff;
  font-size: 16px;
  padding: 12px 20px;
  border: none;
  cursor: pointer;
  transition: background 0.3s ease;
  margin-top: 15px;
  width: 100%;
}

#add-to-cart:hover {
  background: #333;
}

#add-to-cart:disabled {
  opacity: 0.7;
  cursor: not-allowed;
}

/* Responsive: stack image above details on mobile */
@media (max-width: 768px) {
  .grid-container {
    grid-template-columns: repeat(2, 1fr);
  }
  .heading {
    text-align: center;
    font-size: 24px;
  }
  .popup-icon { 
    width: 16px; 
    height: 16px; 
  }
  
  .popup {
    padding: 10px;
  }
  
  .popup-content {
    width: 100%;
    padding: 20px;
    max-height: 95vh;
  }
  
  .popup-top {
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 15px;
  }

  .popup-top img#popup-image {
    width: 100%;
    max-width: 100%;
  }

  .popup-details {
    width: 100%;
  }

  .popup-bottom {
    width: 100%;
  }
  
  .popup-option select {
    font-size: 14px;
    padding: 10px 15px;
  }
  
  #add-to-cart {
    font-size: 14px;
    padding: 10px 15px;
  }
  
  .color-option {
    padding: 10px 15px;
  }
  
  .color-swatch {
    width: 20px;
    height: 20px;
    margin-right: 12px;
  }
}

@media (max-width: 480px) {
  .popup-content {
    padding: 15px;
  }
  
  .popup-top {
    gap: 10px;
  }
  
  .popup-details h2 {
    font-size: 14px;
  }
  
  .popup-details p {
    font-size: 11px;
  }
  
  .color-swatch {
    width: 18px;
    height: 18px;
    margin-right: 10px;
  }
  
  .color-name {
    font-size: 12px;
  }
}