/* custom-grid.css */
.hidden {
  display: none !important;
}

.custom-grid {
  padding: 40px 20px;
  text-align: center;
  max-width: 1200px;
  margin: 0 auto;
}

.heading {
  font-family: "Lustria", serif;
  font-weight: 400;
  font-size: 36px;
  line-height: 120%;
  text-align: left;
  margin: 0 0 20px 0;
}

.grid-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 8px;
}

.grid-item {
  position: relative;
}

.grid-image-wrapper {
  position: relative;
  overflow: hidden;
}

.grid-image {
  width: 100%;
  height: auto;
  object-fit: cover;
}

.popup-icon {
  position: absolute;
  bottom: 30%;
  right: 60%;
  width: 22px;
  height: 22px;
  cursor: pointer;
  z-index: 4;
  background: white;
  border-radius: 50%;
  padding: 4px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.2);
}

/* Popup Styles */
.popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 70%;
  height: 70%;
  
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  padding: 20px;
  box-sizing: border-box;
  transition: opacity 0.4s ease, transform 0.4s ease;

  border: 2px solid #ccc;           /* light gray border */
  
  box-shadow: 0 10px 30px rgba(0,0,0,0.3);  /* subtle shadow */
  background-color: white;          /* ensure popup has background */
}

.popup-content {
  background: white;
  padding: 30px;
  width: 100%;
  max-width: 700px;
  max-height: 95vh;
  overflow-y: auto;
  position: relative;
  box-sizing: border-box;
}

#popup-close {
  position: absolute;
  top: 4px;
  right: 4px;
  font-size: 28px;
  line-height: 1;
  cursor: pointer;
  background: transparent;
  border: 0;
  color: #333;
}

/* Popup Top Section: Image + Details */
.popup-top {
  display: flex;
  flex-direction: row;
  gap: 20px;
  margin-bottom: 20px;
}

.popup-top img#popup-image {
  width: 50%;
  max-width: 350px;
  height: auto;
  object-fit: cover;
}

.popup-details {
  flex: 1;
  text-align: left;
}

.popup-details h2 {
  font-family: 'Jost', sans-serif;
  font-weight: 300;
  font-style: normal;
  font-size: 18px;
  line-height: 120%;
  margin-bottom: 10px;
}

.popup-details p {
  margin-bottom: 10px;
  font-family: 'Jost', sans-serif;
  font-weight: 300;
  font-style: normal;
  font-size: 14px;
  line-height: 110%;
  letter-spacing: -0.01em;
}

/* Color Options - permanent thin left bar style */
.color-swatches {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  margin-top: 8px;
  gap: 0;
}

.color-option {
  display: flex;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  border: 1px solid #ddd;
  
  text-align: left;
  cursor: pointer;
  transition: background 0.15s ease, color 0.15s ease;
  position: relative;
  min-height: 44px;
}

/* If there are exactly two children, split into 50/50 */
.color-option:nth-child(1):nth-last-child(2),
.color-option:nth-child(2):nth-last-child(1) {
  width: 50%;
}

/* Permanent thin bar strip on the left */
.color-option::before {
  content: "";
  display: block;
  width: 6px;         /* adjust width if you want thicker bar */
  height: 100%;        /* full height of the option block */
  flex-shrink: 0;
  margin-right: 12px;  /* space between bar and text */
  background-color: var(--color-bar, #ccc);
 
  box-shadow: inset 0 0 0 1px rgba(0,0,0,0.06);
}

/* Special treatment when the color value is white so bar remains visible */
.color-option.is-white::before {
  background-color: var(--color-bar, #fff);
  box-shadow: 0 0 0 1px #ddd;
}

/* Hover / selected states */
.color-option:hover {
  background: #f9f9f9;
}

.color-option.selected {
  background: #000;
  color: #fff;
  border-color: #000;
}

/* When selected, keep the left bar visible - if the bar is very light (white) show border */
.color-option.selected::before {
  /* keep the set color; add subtle outline so it reads on dark backgrounds if necessary */
  box-shadow: 0 0 0 1px rgba(255,255,255,0.12);
}

/* If selected and white, add subtle border to the white bar so it is visible on white backgrounds */
.color-option.selected.is-white::before {
  box-shadow: 0 0 0 1px rgba(0,0,0,0.08);
}

.color-name {
  font-size: 14px;
  font-weight: 400;
}

/* Bottom Section: Options + Add to Cart */
.popup-bottom {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.popup-option {
  display: flex;
  flex-direction: column;
  text-align: left;
}

.popup-option label {
  margin-bottom: 6px;
  font-weight: 500;
}

.popup-option select {
  padding: 12px 20px;
  border: 1px solid #ddd;
  cursor: pointer;
  font-size: 16px;
  width: 100%;
  box-sizing: border-box;
 
}

#add-to-cart {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  background: #000;
  color: #fff;
  font-size: 16px;
  padding: 12px 20px;
  border: none;
  cursor: pointer;
  transition: background 0.3s ease;
  margin-top: 15px;
  width: 100%;
  box-sizing: border-box;
  border-radius: 0;
}

#add-to-cart:hover {
  background: #333;
}

#add-to-cart:disabled {
  opacity: 0.7;
  cursor: not-allowed;
}

#add-to-cart:disabled:hover {
  background: #000;
}
.size-select-wrapper {
  position: relative;
  width: 100%;
}

.size-select-wrapper select {
  appearance: none;
  -webkit-appearance: none;
  -moz-appearance: none;
  width: 100%;
  padding-right: 30px; /* leave space for arrow */

  
}

.size-select-wrapper .size-arrow {
  border-left: 1px solid #ccc; /* change color as needed */
  padding-left: 16px; /* optional, space between arrow and border */
  height: 100%;        /* ensure it matches arrow image height */
  width: 16px;         /* ensure it matches arrow image width */
  box-sizing: content-box;
  position: absolute;
  right: 20px;
  top: 50%;
  transform: translateY(-50%);
  pointer-events: none;
  font-size: 16px;
  transition: transform 0.2s ease;
}




/* Responsive: stack image above details on mobile */
@media (max-width: 768px) {
  .grid-container {
    grid-template-columns: repeat(2, 1fr);
  }
  .heading {
    text-align: center;
    font-size: 24px;
  }
  .popup-icon { 
    width: 16px; 
    height: 16px; 
  }
  
  .popup {
    padding: 10px;
  }
  
  .popup-content {
    width: 100%;
    padding: 20px;
    max-height: 95vh;
  }
  
  .popup-top {
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 15px;
  }

  .popup-top img#popup-image {
    width: 100%;
    max-width: 100%;
  }

  .popup-details {
    width: 100%;
  }

  .popup-bottom {
    width: 100%;
  }
  
  .popup-option select {
    font-size: 14px;
    padding: 10px 15px;
  }
  
  #add-to-cart {
    font-size: 14px;
    padding: 10px 15px;
  }
  
 
  
  .color-option::before {
    width: 5px;
    margin-right: 10px;
  }
  
  .color-swatch {
    width: 20px;
    height: 20px;
    margin-right: 12px;
  }
}

@media (max-width: 480px) {
  .popup-content {
    padding: 15px;
  }
  
  .popup-top {
    gap: 10px;
  }
  
  .popup-details h2 {
    font-size: 14px;
  }
  
  .popup-details p {
    font-size: 11px;
  }

  .color-name {
    font-size: 12px;
  }
}
