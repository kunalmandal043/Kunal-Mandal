/* custom-grid.css */
.hidden {
  display: none !important;
}

.custom-grid {
  padding: 40px 20px;
  text-align: center;
  max-width: 1200px;
  margin: 0 auto;
}

.heading {
  font-family: "Lustria", serif;
  font-weight: 400;
  font-size: 36px;
  line-height: 120%;
  text-align: left;
  margin: 0 0 20px 0;
}

.grid-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 8px;
}

.grid-item {
  position: relative;
  cursor: pointer;
}

.grid-image-wrapper {
  position: relative;
  overflow: hidden;
}

.grid-image {
  width: 100%;
  height: auto;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.grid-item:hover .grid-image {
  transform: scale(1.05);
}

.popup-icon {
  position: absolute;
  bottom: 10px;
  right: 10px;
  width: 22px;
  height: 22px;
  cursor: pointer;
  z-index: 4;
  background: white;
  border-radius: 50%;
  padding: 4px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.2);
}

/* Popup Styles */
.popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.popup-content {
  background: white;
  padding: 30px;
  border-radius: 10px;
  max-width: 800px;
  width: 90%;
  max-height: 90vh;
  overflow-y: auto;
  position: relative;
}

#popup-close {
  position: absolute;
  top: 15px;
  right: 15px;
  font-size: 24px;
  cursor: pointer;
  color: #333;
}

/* Popup Top Section: Image + Details */
.popup-top {
  display: flex;
  flex-direction: row;
  gap: 20px;
  margin-bottom: 20px;
}

.popup-top img#popup-image {
  width: 50%;
  max-width: 250px;
  height: auto;
  border-radius: 8px;
  object-fit: cover;
}

.popup-details {
  flex: 1;
  text-align: left;
}

.popup-details h2 {
  font-size: 24px;
  margin-bottom: 10px;
}

.popup-details p {
  margin-bottom: 10px;
  font-weight: bold;
  font-size: 18px;
}

/* Bottom Section: Options + Add to Cart */
.popup-bottom {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.popup-option {
  display: flex;
  flex-direction: column;
  text-align: left;
}

.popup-option label {
  margin-bottom: 6px;
  font-weight: 500;
}

.popup-option select {
  padding: 8px;
  border: 1px solid #ddd;
  border-radius: 4px;
  font-size: 16px;
}

#add-to-cart {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  background: #000;
  color: #fff;
  font-size: 16px;
  padding: 12px 20px;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  transition: background 0.3s ease;
  margin-top: 15px;
}

#add-to-cart:hover {
  background: #333;
}

/* Responsive: stack image above details on mobile */
@media (max-width: 768px) {
  .grid-container {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .popup-icon { 
    width: 16px; 
    height: 16px; 
  }
  
  .popup-top {
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .popup-top img#popup-image {
    width: 100%;
    max-width: 100%;
  }

  .popup-details {
    width: 100%;
  }

  .popup-bottom {
    width: 100%;
  }
}