/* custom-grid.css */
.hidden { display: none !important; }

.custom-grid {
  padding: 40px 20px;
  text-align: center;
  max-width: 1200px;
  margin: 0 auto;
}

.heading {
  font-family: "Lustria", serif;
  font-size: 36px;
  margin: 0 0 20px;
  text-align: left;
}

.grid-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 8px;
}

.grid-item { position: relative; }
.grid-image-wrapper { position: relative; overflow: hidden; }
.grid-image { width: 100%; height: auto; object-fit: cover; }

.popup-icon {
  position: absolute;
  bottom: 30%;
  right: 60%;
  width: 22px; height: 22px;
  cursor: pointer;
  background: #fff;
  border-radius: 50%;
  padding: 4px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.2);
}

/* --- Popup --- */
.popup {
  position: fixed; inset: 0;
  background: rgba(0,0,0,0.7);
  display: flex; justify-content: center; align-items: center;
  z-index: 1000;
  padding: 20px;
}

.popup-content {
  background: #fff;
  padding: 30px;
  width: 100%; max-width: 400px;
  max-height: 95vh;
  overflow-y: auto;
  position: relative;
}

#popup-close {
  position: absolute; top: 15px; right: 15px;
  font-size: 24px; cursor: pointer;
}

/* --- Top: Image + Details --- */
.popup-top {
  display: flex; gap: 20px; margin-bottom: 20px;
}
.popup-top img#popup-image {
  width: 50%; max-width: 250px; object-fit: cover;
}
.popup-details { flex: 1; text-align: left; }
.popup-details h2 { font-size: 16px; margin-bottom: 10px; }
.popup-details p { font-size: 12px; margin-bottom: 10px; }

/* --- Color Options --- */
.color-swatches {
  display: flex;
  flex-wrap: wrap;
  margin-top: 8px;
  width: 100%;
}

.color-option {
  display: flex;
  align-items: center;
  flex: 1 1 100%;
  border: 1px solid #ddd;
  cursor: pointer;
  transition: background 0.2s ease, color 0.2s ease;
  padding: 12px;
  box-sizing: border-box;
}

.color-option .color-swatch {
  width: 8px; height: 100%;
  margin-right: 12px;
  flex-shrink: 0;
}

.color-option .color-name {
  font-size: 14px;
  flex-grow: 1;
  text-align: left;
}

.color-option.selected {
  background: #000;
  color: #fff;
  border-color: #000;
}

.color-option.selected .color-name { color: #fff; }

/* --- Size + Add to Cart --- */
.popup-bottom { display: flex; flex-direction: column; gap: 12px; }
.popup-option { display: flex; flex-direction: column; text-align: left; }
.popup-option label { margin-bottom: 6px; font-weight: 500; }

.popup-option select {
  padding: 12px 20px;
  border: 1px solid #ddd;
  font-size: 16px;
  width: 100%;
  border-radius: 0;
}

#add-to-cart {
  display: flex; justify-content: center; align-items: center;
  background: #000; color: #fff;
  font-size: 16px;
  padding: 12px 20px;
  border: none; cursor: pointer;
  width: 100%;
}

#add-to-cart:hover { background: #333; }
#add-to-cart:disabled { opacity: 0.7; cursor: not-allowed; }

/* --- Responsive --- */
@media (max-width: 768px) {
  .grid-container { grid-template-columns: repeat(2,1fr); }
  .heading { text-align: center; font-size: 24px; }
  .popup-top { flex-direction: column; align-items: center; }
  .popup-top img#popup-image { width: 100%; }
}


