

.custom-grid {
  padding: 40px 20px;
  text-align: center;
  max-width: 1200px; /* prevent overflow */
  margin: 0 auto;
}

/* Section Heading */
.heading {
  width: 372px;
  height: 43px;
  font-family: "Lustria", serif;
  font-weight: 400;
  font-style: normal;
  font-size: 36px;
  line-height: 120%; /* ~43px */
  letter-spacing: 0px;
  vertical-align: middle;
  text-align: left; /* Desktop left aligned */
  margin: 0 0 20px 0;
}

/* Grid Container */
.grid-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr); /* Desktop: 3 per row */
  gap: 20px;
  margin-top: 20px;
}

/* Grid Items */
.grid-item {
  padding: 10px;
  border-radius: 8px;
 
  position: relative; /* Needed for absolute children */
  display: inline-block;
}



/* Grid Images */
.grid-item img,
.grid-image {
  width: 100%;              /* responsive scaling */
  max-width: 433px;         /* fixed desktop size */
  height: auto;             /* maintain aspect ratio */
  aspect-ratio: 433 / 444;  /* helps prevent layout shift */
  object-fit: cover;
  display: block;
  margin: 0 auto;
}
.grid-item .popup-icon {
  position: absolute;
  bottom: 15px;
  right: 15px;
  width: 22px;
  height: 22px;
  cursor: pointer;
  opacity: 0.9;
  z-index: 2; /* keep above image */
}

.grid-item .popup-icon:hover {
  cursor:pointer;
}



/* Tablet & Mobile (<=768px): 2 images per row */
@media (max-width: 768px) {
  .heading {
    width: 248px;
    height: 29px;
    font-size: 24px;
    line-height: 120%; /* ~29px */
    text-align: center;
    margin: 0 auto 20px auto;
  }

  .grid-container {
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
  }

  .grid-item img,
  .grid-image {
    max-width: 100%; /* shrink to fit */
  }
}




.popup {
  position: fixed;
  top: 0; left: 0;
  width: 100%; height: 100%;
  background: rgba(0,0,0,0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.popup.hidden { display: none; }

.popup-content {
  background: #fff;
  padding: 20px;
  max-width: 500px;
  width: 90%;
  border-radius: 10px;
  text-align: center;
  position: relative;
}

#popup-close {
  position: absolute;
  top: 10px; right: 15px;
  font-size: 24px;
  cursor: pointer;
}

#add-to-cart {
  margin-top: 20px;
  background: #000;
  color: #fff;
  padding: 12px 24px;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  transition: background 0.3s ease;
}

#add-to-cart:hover {
  background: #333;
}
