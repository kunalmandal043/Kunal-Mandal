/* custom-grid.css */
.hidden {
  display: none !important;
}

.custom-grid {
  padding: 40px 20px;
  text-align: center;
  max-width: 1200px;
  margin: 0 auto;
}

.heading {
  font-family: "Lustria", serif;
  font-weight: 400;
  font-size: 36px;
  line-height: 120%;
  text-align: left;
  margin: 0 0 20px 0;
}

.grid-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 8px;
}

.grid-item {
  position: relative;
}

.grid-image-wrapper {
  position: relative;
  overflow: hidden;
}

.grid-image {
  width: 100%;
  height: auto;
  object-fit: cover;
}

.popup-icon {
  position: absolute;
  bottom: 30%;
  right: 60%;
  width: 22px;
  height: 22px;
  cursor: pointer;
  z-index: 4;
  background: white;
  border-radius: 50%;
  padding: 4px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.2);
}

/* Popup */
.popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  padding: 20px;
  box-sizing: border-box;
}

.popup-content {
  background: white;
  padding: 30px;
  width: 100%;
  max-width: 400px;
  max-height: 95vh;
  overflow-y: auto;
  position: relative;
}

#popup-close {
  position: absolute;
  top: 15px;
  right: 15px;
  font-size: 24px;
  cursor: pointer;
  color: #333;
}

/* Popup Top */
.popup-top {
  display: flex;
  flex-direction: row;
  gap: 20px;
  margin-bottom: 20px;
}

.popup-top img#popup-image {
  width: 50%;
  max-width: 250px;
  object-fit: cover;
}

.popup-details {
  flex: 1;
  text-align: left;
}

.popup-details h2 {
  font-family: 'Jost', sans-serif;
  font-weight: 300;
  font-size: 16px;
  margin-bottom: 10px;
}

.popup-details p {
  font-family: 'Jost', sans-serif;
  font-size: 12px;
  margin-bottom: 10px;
}

/* Color Options */
.color-swatches {
  display: flex;
  flex-direction: column;
  gap: 6px;
  width: 100%;
  margin-top: 8px;
}

.color-option {
  display: flex;
  align-items: center;
  padding: 10px 15px;
  cursor: pointer;
  border: 1px solid #ddd;
  transition: background 0.2s ease;
  background: #fff;
}

.color-option:hover {
  background: #f9f9f9;
}

.color-option.selected {
  background: #000;
  color: #fff;
}

/* Swatch strip */
.color-swatch {
  width: 20px;
  height: 20px;
  margin-right: 12px;
  border: 1px solid #ddd;
  flex-shrink: 0;
}

.color-option.selected .color-swatch {
  border: 1px solid #fff; /* still visible */
}

.color-name {
  font-size: 14px;
  flex: 1;
}

