/* custom-grid.css */
.hidden {
  display: none !important;
}

.custom-grid {
  padding: 40px 20px;
  text-align: center;
  max-width: 1200px;
  margin: 0 auto;
}

.heading {
  font-family: "Lustria", serif;
  font-weight: 400;
  font-size: 36px;
  line-height: 120%;
  text-align: left;
  margin: 0 0 20px 0;
}

.grid-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 8px;
}

.grid-item {
  position: relative;
}

.grid-image-wrapper {
  position: relative;
  overflow: hidden;
}

.grid-image {
  width: 100%;
  height: auto;
  object-fit: cover;
}

.popup-icon {
  position: absolute;
  bottom: 30%;
  right: 60%;
  width: 22px;
  height: 22px;
  cursor: pointer;
  z-index: 4;
  background: white;
  border-radius: 50%;
  padding: 4px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.2);
}

/* Popup Styles */
.popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  padding: 20px;
  box-sizing: border-box;
  transition: opacity 0.4s ease, transform 0.4s ease;
}

.popup-content {
  background: white;
  padding: 30px;
  width: 100%;
  max-width: 400px;
  max-height: 95vh;
  overflow-y: auto;
  position: relative;
  box-sizing: border-box;
}

#popup-close {
  position: absolute;
  top: 15px;
  right: 15px;
  font-size: 24px;
  cursor: pointer;
  transition: opacity 0.4s ease, transform 0.4s ease;
  color: #333;
}

/* Popup Top Section: Image + Details */
.popup-top {
  display: flex;
  flex-direction: row;
  gap: 20px;
  margin-bottom: 20px;
}

.popup-top img#popup-image {
  width: 50%;
  max-width: 250px;
  height: auto;
  object-fit: cover;
}

.popup-details {
  flex: 1;
  text-align: left;
}

.popup-details h2 {
  font-family: 'Jost', sans-serif;
  font-weight: 300;
  font-style: normal;
  font-size: 16px;
  line-height: 120%;
  margin-bottom: 10px;
}

.popup-details p {
  margin-bottom: 10px;
  font-family: 'Jost', sans-serif;
  font-weight: 300;
  font-style: normal;
  font-size: 12px;
  line-height: 110%;
  letter-spacing: -0.01em;
}

/* Color Options - FIXED: Ensure color strips are always visible */
.color-swatches {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  margin-top: 8px;
  gap: 8px; /* Add some gap between options */
}

.color-option {
  display: flex;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  border: 1px solid #ddd;
  padding: 12px 15px 12px 12px; /* Adjust left padding for strip */
  text-align: left;
  cursor: pointer;
  transition: all 0.2s ease;
  position: relative;
  border-radius: 4px;
  margin: 0;
  overflow: hidden; /* Ensure the strip doesn't overflow */
}

/* For exactly 2 colors, split 50/50 */
.color-option:nth-child(1):nth-last-child(2),
.color-option:nth-child(2):nth-last-child(1) {
  width: calc(50% - 4px); /* Account for gap */
}

.color-option:hover {
  background: #f9f9f9;
}

.color-option.selected {
  background: #000;
  color: #fff;
  border-color: #000;
}

/* Color strip - always visible on the left side */
.color-option::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 8px; /* Width of the color strip */
  z-index: 1; /* Ensure it's above the background */
}

/* Set the color for the strip based on the color name */
.color-option[data-color="white"]::before { background-color: #fff; border-right: 1px solid #ddd; }
.color-option[data-color="black"]::before { background-color: #000; }
.color-option[data-color="navy"]::before { background-color: #000080; }
.color-option[data-color="gray"]::before,
.color-option[data-color="grey"]::before { background-color: #808080; }
.color-option[data-color="red"]::before { background-color: #FF0000; }
.color-option[data-color="blue"]::before { background-color: #0000FF; }
.color-option[data-color="green"]::before { background-color: #008000; }
.color-option[data-color="yellow"]::before { background-color: #FFFF00; }
.color-option[data-color="purple"]::before { background-color: #800080; }
.color-option[data-color="pink"]::before { background-color: #FFC0CB; }
.color-option[data-color="orange"]::before { background-color: #FFA500; }
.color-option[data-color="brown"]::before { background-color: #A52A2A; }
.color-option[data-color="beige"]::before { background-color: #F5F5DC; }
.color-option[data-color="khaki"]::before { background-color: #F0E68C; }
.color-option[data-color="olive"]::before { background-color: #808000; }
.color-option[data-color="tan"]::before { background-color: #D2B48C; }
.color-option[data-color="burgundy"]::before { background-color: #800020; }
.color-option[data-color="maroon"]::before { background-color: #800000; }
.color-option[data-color="teal"]::before { background-color: #008080; }
.color-option[data-color="turquoise"]::before { background-color: #40E0D0; }
.color-option[data-color="lavender"]::before { background-color: #E6E6FA; }
.color-option[data-color="mustard"]::before { background-color: #FFDB58; }

/* For any other color, use a default */
.color-option:not([data-color])::before { background-color: #ccc; }

/* Make sure the strip remains visible when option is selected */
.color-option.selected::before {
  border-right: 1px solid rgba(255, 255, 255, 0.3); /* Add subtle separator */
}

.color-name {
  font-size: 14px;
  font-weight: 400;
  margin-left: 12px; /* Space after the color strip */
}

/* Bottom Section: Options + Add to Cart */
.popup-bottom {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.popup-option {
  display: flex;
  flex-direction: column;
  text-align: left;
}

.popup-option label {
  margin-bottom: 6px;
  font-weight: 500;
}

.popup-option select {
  padding: 12px 20px;
  border: 1px solid #ddd;
  cursor: pointer;
  font-size: 16px;
  width: 100%;
  box-sizing: border-box;
  border-radius: 4px;
}

#add-to-cart {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  background: #000;
  color: #fff;
  font-size: 16px;
  padding: 12px 20px;
  border: none;
  cursor: pointer;
  transition: background 0.3s ease;
  margin-top: 15px;
  width: 100%;
  box-sizing: border-box;
  border-radius: 4px;
}

#add-to-cart:hover {
  background: #333;
}

#add-to-cart:disabled {
  opacity: 0.7;
  cursor: not-allowed;
}

#add-to-cart:disabled:hover {
  background: #000;
}


/* Responsive: stack image above details on mobile */
@media (max-width: 768px) {
  .grid-container {
    grid-template-columns: repeat(2, 1fr);
  }
  .heading {
    text-align: center;
    font-size: 24px;
  }
  .popup-icon { 
    width: 16px; 
    height: 16px; 
  }
  
  .popup {
    padding: 10px;
  }
  
  .popup-content {
    width: 100%;
    padding: 20px;
    max-height: 95vh;
  }
  
  .popup-top {
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 15px;
  }

  .popup-top img#popup-image {
    width: 100%;
    max-width: 100%;
  }

  .popup-details {
    width: 100%;
  }

  .popup-bottom {
    width: 100%;
  }
  
  .popup-option select {
    font-size: 14px;
    padding: 10px 15px;
  }
  
  #add-to-cart {
    font-size: 14px;
    padding: 10px 15px;
  }
  
  .color-option {
    padding: 10px 15px 10px 10px;
  }
  
  .color-option::before {
    width: 6px; /* Slightly thinner strip on mobile */
  }
  
  .color-name {
    margin-left: 10px;
    font-size: 13px;
  }
}

@media (max-width: 480px) {
  .popup-content {
    padding: 15px;
  }
  
  .popup-top {
    gap: 10px;
  }
  
  .popup-details h2 {
    font-size: 14px;
  }
  
  .popup-details p {
    font-size: 11px;
  }
  
  .color-option::before {
    width: 5px;
  }
  
  .color-name {
    margin-left: 8px;
    font-size: 12px;
  }
}