.hidden {
  display: none !important;
}

.custom-grid {
  padding: 40px 20px;
  text-align: center;
  max-width: 1200px;
  margin: 0 auto;
}

.heading {
  font-family: "Lustria", serif;
  font-weight: 400;
  font-size: 36px;
  line-height: 120%;
  text-align: left;
  margin: 0 0 20px 0;
}

.grid-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 8px;
}

.grid-item {
  position: relative;
}

.grid-image-wrapper {
  position: relative;
  overflow: hidden;
}

.grid-image {
  width: 100%;
  height: auto;
  object-fit: cover;
}

.popup-icon {
  position: absolute;
  bottom: 30%;
  right: 60%;
  width: 22px;
  height: 22px;
  cursor: pointer;
  z-index: 4;
  border-radius: 50%;
  padding: 4px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.2);
}

/* Popup Styles */
.popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  transition: opacity 0.4s ease, transform 0.4s ease;
  border: 2px solid #ccc;
  box-shadow: 0 10px 30px rgba(0,0,0,0.3);
  background-color: rgba(0, 0, 0, 0.5); /* overlay background */
}

.popup-content {
  background: white;
  padding: 20px;
  width: 90%;
  max-width: 600px;
  max-height: 80vh;
  overflow: hidden;
  position: relative;
  box-sizing: border-box;
}

#popup-close {
  position: absolute;
  top: 4px;
  right: 4px;
  font-size: 28px;
  line-height: 1;
  cursor: pointer;
  background: transparent;
  border: 0;
  color: #333;
}

/* Popup Top Section: Image + Details */
.popup-top {
  display: flex;
  flex-direction: row;
  gap: 20px;
  margin-bottom: 20px;
  align-items: stretch; /* make image and description same height */
}

.popup-top img#popup-image {
  width: 50%;
  max-width: 250px;
  height: 100%; /* stretch image to match container */
  object-fit: cover; /* maintain aspect ratio while filling height */
}

.popup-details {
  flex: 1;
  text-align: left;
  height: 100%; /* match image height */
  overflow-y: auto;
}

.popup-details h2 {
  font-family: 'Jost', sans-serif;
  font-weight: 300;
  font-style: normal;
  font-size: 18px;
  line-height: 120%;
  margin-bottom: 10px;
}

.popup-details p {
  margin-bottom: 10px;
  font-family: 'Jost', sans-serif;
  font-weight: 300;
  font-style: normal;
  font-size: 14px;
  line-height: 110%;
  letter-spacing: -0.01em;
}

/* Color Options */
.color-swatches {
  display: flex;
  flex-wrap: nowrap;
  width: 100%;
  margin-top: 8px;
  gap: 0;
}

.color-option {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  text-align: left;
  box-sizing: border-box;
  border: 1px solid #ddd;
  cursor: pointer;
  position: relative;
  min-height: 44px;
  flex: 1 1 auto;
}

.color-swatches > .color-option {
  width: calc(100% / var(--color-count));
}

.color-option::before {
  content: "";
  display: block;
  width: 6px;
  height: 100%;
  flex-shrink: 0;
  margin-right: 8px;
  background-color: var(--color-bar, #ccc);
}

.color-option.is-white::before {
  background-color: var(--color-bar, #fff);
  box-shadow: 0 0 0 1px #ddd;
}

.color-option:hover {
  background: #f9f9f9;
}

.color-option.selected {
  background: #000;
  color: #fff;
  border-color: #000;
}

.color-option.selected::before {
  box-shadow: 0 0 0 1px rgba(255,255,255,0.12);
}

.color-option.selected.is-white::before {
  box-shadow: 0 0 0 1px rgba(0,0,0,0.08);
}

.color-name {
  font-size: 14px;
  font-weight: 400;
  flex: 1;
  text-align: center;
}

/* Bottom Section: Options + Add to Cart */
.popup-bottom {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.popup-option {
  display: flex;
  flex-direction: column;
  text-align: left;
}

.popup-option label {
  margin-bottom: 6px;
  font-weight: 500;
}

.popup-option select {
  padding: 12px 20px;
  border: 1px solid #ddd;
  cursor: pointer;
  font-size: 16px;
  width: 100%;
  box-sizing: border-box;
}

#add-to-cart {
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  cursor: pointer;
  background: black;
  transition: background 0.3s ease;
  margin-top: 15px;
  width: 100%;
  height: 50px;
}

#add-to-cart:disabled {
  opacity: 0.7;
  cursor: not-allowed;
}

.add-to-cart-icon {
  width: auto;
  height: 100%;
  object-fit: contain;
}

.size-select-wrapper {
  position: relative;
  width: 100%;
}

.size-select-wrapper select {
  appearance: none;
  -webkit-appearance: none;
  -moz-appearance: none;
  width: 100%;
  padding-right: 40px;
  text-align: left;
}

.size-select-wrapper select option {
  text-align: center;
}

.size-select-wrapper select:focus,
.size-select-wrapper select:not([value=""]):not(:focus) {
  text-align: center;
}

.size-select-wrapper .size-arrow {
  border-left: 1px solid #ccc;
  padding-left: 12px;
  height: 100%;
  width: 16px;
  box-sizing: content-box;
  position: absolute;
  right: 12px;
  top: 50%;
  transform: translateY(-50%);
  pointer-events: none;
  font-size: 16px;
  transition: transform 0.2s ease;
}

/* Responsive: Mobile layout (all screens <768px) */
@media (max-width: 768px) {
  .grid-container {
    grid-template-columns: repeat(2, 1fr);
  }

  .heading {
    text-align: center;
    font-size: 24px;
  }

  .popup-icon { 
    width: 16px; 
    height: 16px; 
  }

  .popup-content {
    padding: 20px;
    width: 90%;
    max-width: 600px;
    max-height: 70vh;
    overflow: hidden;
  }

  /* Side-by-side layout with stretched image */
  .popup-top {
    display: flex;
    flex-direction: row;
    gap: 15px;
    align-items: stretch;
  }

  .popup-top img#popup-image {
    width: 50%;
    max-width: 250px;
    height: 100%; /* stretch image */
    object-fit: cover;
  }

  .popup-details {
    width: 50%;
    height: 100%; /* match image height */
    overflow-y: auto;
  }

  .popup-bottom {
    width: 100%;
  }
}

/* Tiny screen adjustments: keep same side-by-side layout */
@media (max-width: 480px) {
  .color-option {
    font-size: 10px;
    min-width: 30px;
    height: 36px;
  }

  .color-option::before {
    width: 3px;
    height: 100%;
    margin-right: 4px;
  }

  .popup-top {
    flex-direction: row;
    gap: 10px;
    align-items: stretch;
  }
