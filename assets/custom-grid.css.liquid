/* Grid styling */
.custom-grid {
  padding: 40px 20px;
  text-align: center;
}

.grid-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr); /* 3 images per row by default (desktop) */
  gap: 20px;
  margin-top: 20px;
}

.grid-item {
  cursor: pointer;
  border: 1px solid #eee;
  padding: 10px;
  border-radius: 8px;
  transition: transform 0.2s ease;
}
.grid-item:hover {
  transform: scale(1.03);
}

/* Mobile view: 2 images per row */
@media (max-width: 768px) {
  .grid-container {
    grid-template-columns: repeat(2, 1fr);
  }
}

/* Popup styles */
.popup {
  position: fixed;
  top: 0; left: 0;
  width: 100%; height: 100%;
  background: rgba(0,0,0,0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}
.popup.hidden { display: none; }

.popup-content {
  background: #fff;
  padding: 20px;
  max-width: 500px;
  width: 90%;
  border-radius: 10px;
  text-align: center;
  position: relative;
}
#popup-close {
  position: absolute;
  top: 10px; right: 15px;
  font-size: 24px;
  cursor: pointer;
}
#add-to-cart {
  margin-top: 20px;
  background: #000;
  color: #fff;
  padding: 12px 24px;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  transition: background 0.3s ease;
}
#add-to-cart:hover {
  background: #333;
}
