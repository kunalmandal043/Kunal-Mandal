/* --------- root / small resets --------- */
:root{
  --grid-max-width:1200px;
  --popup-max-width:720px;
  --gutter:20px;
  --accent:#000;
  --muted:#f4f4f4;
  --radius:10px;
  --strip-width:8px; /* change to make strip thinner/thicker */
}

/* small reset */
* { box-sizing: border-box; }
html,body { margin:0; padding:0; font-family: 'Jost', system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial; color:#222; }

/* utility */
.hidden { display:none !important; }

/* ------------------ GRID / HERO ------------------ */
.custom-grid {
  padding: 40px 20px;
  max-width: var(--grid-max-width);
  margin: 0 auto;
}

.custom-grid .heading {
  font-family: "Lustria", serif;
  font-weight: 400;
  font-size: 34px;
  line-height: 1.05;
  margin-bottom: 24px;
  text-align: left;
}

/* responsive grid: auto-fit so it adapts */
.grid-container {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: var(--gutter);
  align-items: start;
}

.grid-item {
  position: relative;
  border-radius: var(--radius);
  overflow: hidden;
  background: #fff;
  transition: transform .12s ease, box-shadow .12s ease;
  box-shadow: 0 2px 6px rgba(0,0,0,0.04);
}

/* thumbnail image inside grid item */
.grid-image-wrapper { position: relative; display:block; }
.grid-image { width:100%; height:auto; object-fit:cover; display:block; }

/* popup icon shown on each card */
.popup-icon {
  position: absolute;
  bottom: 12px;
  right: 12px;
  width: 36px;
  height: 36px;
  display:flex;
  justify-content:center;
  align-items:center;
  background: #fff;
  border-radius: 50%;
  box-shadow: 0 6px 14px rgba(0,0,0,0.12);
  cursor: pointer;
  z-index: 6;
  transition: transform .12s ease, background .12s ease;
}
.popup-icon img { width:18px; height:18px; display:block; }

/* hover lift */
.grid-item:hover { transform: translateY(-4px); box-shadow: 0 8px 20px rgba(0,0,0,0.08); }

/* ------------------ POPUP (overlay) ------------------ */
/* HTML: <div id="product-popup" class="popup hidden"> */
.popup {
  position: fixed;
  inset: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px;
  background: rgba(0,0,0,0.6);
  z-index: 1200;
}

/* default hidden via .hidden utility; visible when JS removes hidden */
.popup.hidden { display: none; }

/* content box */
.popup-content {
  width: 100%;
  max-width: var(--popup-max-width);
  background: #fff;
  border-radius: 12px;
  padding: 22px;
  box-shadow: 0 12px 40px rgba(0,0,0,0.25);
  overflow-y: auto;
  max-height: 92vh;
  position: relative;
}

/* close icon */
#popup-close {
  position: absolute;
  top: 12px;
  right: 14px;
  font-size: 24px;
  line-height:1;
  cursor: pointer;
  color: #222;
}

/* top area: image + details */
.popup-top {
  display: flex;
  gap: 18px;
  align-items: flex-start;
  margin-bottom: 16px;
}

/* image inside popup */
.popup-top #popup-image {
  width: 48%;
  max-width: 320px;
  height: auto;
  object-fit: cover;
  border-radius: 8px;
}

/* details to right */
.popup-details { flex: 1; min-width: 0; }
#popup-title { font-size: 20px; margin: 0 0 8px 0; font-weight: 600; }
#popup-price { font-size: 16px; font-weight: 700; margin: 0 0 8px; color: var(--accent); }
#popup-description { font-size: 13px; color: #555; margin-bottom: 6px; }

/* popup bottom: options + add to cart */
.popup-bottom { display: flex; flex-direction: column; gap: 12px; margin-top: 6px; }

/* option containers */
.popup-option { display: flex; flex-direction: column; gap: 8px; }
.popup-option label { font-size: 13px; font-weight: 600; color: #333; }

/* size select */
#size-select {
  width: 100%;
  padding: 10px 12px;
  border: 1px solid #ddd;
  border-radius: 6px;
  font-size: 14px;
  background: #fff;
  cursor: pointer;
}

/* ------------------ COLOR SWATCHES LIST ------------------ */
/* container (vertical list) */
.color-swatches {
  display: flex;
  flex-direction: column;
  gap: 8px;
  width: 100%;
  margin-top: 4px;
}

/* each color row */
.color-option {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 8px 12px;
  border: 1px solid #e6e6e6;
  border-radius: 8px;
  background: #fff;
  cursor: pointer;
  min-height: 44px;            /* ensures a consistent, tappable row height */
  transition: background .14s ease, border-color .14s ease, transform .06s ease;
  position: relative;
  overflow: visible;
}

/* active press effect */
.color-option:active { transform: scale(.998); }

/* small vertical strip to the left (always visible). 
   They will be set via inline style from JS: swatch.style.backgroundColor = val; */
.color-swatch {
  width: var(--strip-width);
  align-self: stretch;         /* make it span full row height */
  height: auto;                /* use align-self:stretch rather than hard height */
  border-radius: 3px;
  flex-shrink: 0;
  box-shadow: 0 0 0 1px rgba(0,0,0,0.03) inset; /* subtle inner line so it reads on white */
}

/* color name */
.color-name {
  font-size: 14px;
  color: #222;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  flex: 1;
}

/* ensure strip remains visible when row becomes dark (selected) */
/* when selected, we keep the strip as-is (child background remains), but add a subtle border so it stands out */
.color-option.selected .color-swatch {
  box-shadow: 0 0 0 1px rgba(255,255,255,0.12) inset;
}

/* selected state - row becomes black, but strip remains visible */
.color-option.selected {
  background: #000;
  border-color: #000;
}

/* text turns white on selected */
.color-option.selected .color-name {
  color: #fff;
}

/* for accessibility: focus outline */
.color-option:focus { outline: 3px solid rgba(0,0,0,0.08); outline-offset: 2px; }

/* small helper for white swatch - JS already adds border for 'white', but keep a class fallback */
.color-swatch.white {
  border: 1px solid #cfcfcf;
}

/* ------------------ ADD TO CART ------------------ */
#add-to-cart {
  display: inline-flex;
  width: 100%;
  justify-content: center;
  align-items: center;
  gap: 8px;
  padding: 12px 16px;
  background: var(--accent);
  color: #fff;
  border: none;
  border-radius: 8px;
  font-weight: 700;
  cursor: pointer;
  transition: background .12s ease, opacity .12s ease;
}
#add-to-cart:hover { background: #222; }
#add-to-cart:disabled { opacity: .6; cursor: not-allowed; }

/* ------------------ SMALL SCREEN ADJUSTMENTS ------------------ */
@media (max-width: 900px) {
  .popup-top { flex-direction: column; align-items: center; text-align: center; gap: 12px; }
  .popup-top #popup-image { width: 100%; max-width: none; }
  .popup-details { width: 100%; }
  .color-option { min-height: 48px; padding: 10px; }
  .color-name { font-size: 15px; }
}

/* mobile layout for grid */
@media (max-width: 640px) {
  .custom-grid { padding: 20px 14px; }
  .custom-grid .heading { font-size: 24px; text-align: center; }
  .grid-container { gap: 12px; }
  .color-option { gap: 10px; padding: 8px; min-height: 44px; }
  :root { --strip-width: 7px; }
}

/* ------------------ OPTIONAL: focus/hover polish ------------------ */
.color-option:hover { border-color: #cfcfcf; box-shadow: 0 2px 8px rgba(0,0,0,0.03); }
.color-option.selected:hover { box-shadow: 0 4px 16px rgba(0,0,0,0.12); }

