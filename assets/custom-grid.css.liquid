/* ===== Grid Section Styling ===== */
.custom-grid {
  padding: 40px 20px;
  max-width: 1200px;  /* Center the section and prevent overflow */
  margin: 0 auto;
}

/* Grid layout */
.grid-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr); /* Desktop: 3 per row */
  gap: 20px;
  margin-top: 20px;
}

/* Heading */
.heading {
  width: 372px;
  height: 43px;
  font-family: "Lustria", serif;
  font-weight: 400;
  font-style: normal;
  font-size: 36px;
  line-height: 120%;
  letter-spacing: 0px;
  vertical-align: middle;
  text-align: left; /* Left on desktop */
  margin: 0 0 20px 0;
}

/* Heading Mobile */
@media (max-width: 768px) {
  .heading {
    width: 248px;
    height: 29px;
    font-size: 24px;
    line-height: 120%;
    text-align: center; /* Center aligned */
    margin: 0 auto 20px auto;
  }
}

/* ===== Grid Items ===== */
.grid-item {
  padding: 10px;
  border-radius: 8px;
  transition: transform 0.2s ease;
}
.grid-item:hover {
  transform: scale(1.03);
}

/* Desktop images fixed size */
.grid-item img {
  width: 100%;              /* Fill column */
  max-width: 433px;         /* Desktop limit */
  aspect-ratio: 433 / 444;  /* Maintain ratio */
  object-fit: cover;
  display: block;
  margin: 0 auto;
  height: auto;
}

/* ===== Responsive Breakpoints ===== */

/* Tablet: 2 per row */
@media (max-width: 1024px) {
  .grid-container {
    grid-template-columns: repeat(2, 1fr);
  }
  .grid-item img {
    max-width: 100%;  /* Fully fluid */
    aspect-ratio: auto;
  }
}

/* Mobile: 2 per row */
@media (max-width: 768px) {
  .grid-container {
    grid-template-columns: repeat(2, 1fr);
  }
  .grid-item img {
    width: 100%;
    height: auto;
  }
}

/* Very small phones: 1 per row */
@media (max-width: 480px) {
  .grid-container {
    grid-template-columns: 1fr;
  }
}

/* ===== Popup Styles ===== */
.popup {
  position: fixed;
  top: 0; left: 0;
  width: 100%; height: 100%;
  background: rgba(0,0,0,0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}
.popup.hidden { display: none; }

.popup-content {
  background: #fff;
  padding: 20px;
  max-width: 500px;
  width: 90%;
  border-radius: 10px;
  text-align: center;
  position: relative;
}
#popup-close {
  position: absolute;
  top: 10px; right: 15px;
  font-size: 24px;
  cursor: pointer;
}
#add-to-cart {
  margin-top: 20px;
  background: #000;
  color: #fff;
  padding: 12px 24px;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  transition: background 0.3s ease;
}
#add-to-cart:hover {
  background: #333;
}
