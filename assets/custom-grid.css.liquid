/* custom-grid.css */
.hidden {
  display: none !important;
}

.custom-grid {
  padding: 40px 20px;
  text-align: center;
  max-width: 1200px;
  margin: 0 auto;
}

.heading {
  font-family: "Lustria", serif;
  font-weight: 400;
  font-size: 36px;
  line-height: 120%;
  text-align: left;
  margin: 0 0 20px 0;
}

.grid-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 8px;
}

.grid-item {
  position: relative;
}

.grid-image-wrapper {
  position: relative;
  overflow: hidden;
}

.grid-image {
  width: 100%;
  height: auto;
  object-fit: cover;
}

.popup-icon {
  position: absolute;
  bottom: 30%;
  right: 60%;
  width: 22px;
  height: 22px;
  cursor: pointer;
  z-index: 4;
  background: white;
  border-radius: 50%;
  padding: 4px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.2);
}

/* Popup Styles */
.popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  padding: 20px;
  box-sizing: border-box;
}

  
  
.popup-content {
  background: white;
  padding: 30px;
  width: 100%;
  max-width: 400px; /* Added max-width for larger screens */
  max-height: 95vh;
  overflow-y: auto;
  position: relative;
  box-sizing: border-box; /* Include padding in width calculation */
}

#popup-close {
  position: absolute;
  top: 15px;
  right: 15px;
  font-size: 24px;
  cursor: pointer;
  color: #333;
}

/* Popup Top Section: Image + Details */
.popup-top {
  display: flex;
  flex-direction: row;
  gap: 20px;
  margin-bottom: 20px;
}

.popup-top img#popup-image {
  width: 50%;
  max-width: 250px;
  height: auto;
  object-fit: cover; /* Ensure image maintains aspect ratio */
}

.popup-details {
  flex: 1;
  text-align: left;
}

.popup-details h2 {
  font-family: 'Jost', sans-serif;
  font-weight: 300;
  font-style: normal;
  font-size: 16px;
  line-height: 120%;
  margin-bottom: 10px;
}

.popup-details p {
  margin-bottom: 10px;
  font-family: 'Jost', sans-serif;
  font-weight: 300;
  font-style: normal;
  font-size: 12px;
  line-height: 110%;
  letter-spacing: -0.01em; /* Changed from -1% to valid value */
}

/* Bottom Section: Options + Add to Cart */
.popup-bottom {
  display: flex;
  flex-direction: column;
  gap: 12px;
  cursor:pointer;
}

.popup-option {
  display: flex;
  flex-direction: column;
  text-align: center;
  cursor:pointer;
}

.popup-option label {
  
  margin-bottom: 6px;
  font-weight: 500;
  cursor:pointer;
}

.popup-option select {
  padding: 8px;
  border: 1px solid #ddd;
  cursor:pointer;
  font-size: 16px;
  width: 100%; /* Ensure select doesn't overflow */
  box-sizing: border-box;
}

#add-to-cart {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  background: #000;
  color: #fff;
  font-size: 16px;
  padding: 12px 20px;
  border: none;
  cursor: pointer;
  transition: background 0.3s ease;
  margin-top: 15px;
  width: 100%; /* Full width button */
  box-sizing: border-box;
}

#add-to-cart:hover {
  background: #333;
}

#add-to-cart:disabled {
  opacity: 0.7;
  cursor: not-allowed;
}

#add-to-cart:disabled:hover {
  background: #000;
}

/* Responsive: stack image above details on mobile */
@media (max-width: 768px) {
  .grid-container {
    grid-template-columns: repeat(2, 1fr);
  }
  .heading {
    text-align:center;
  }
  .popup-icon { 
    width: 16px; 
    height: 16px; 
  }
  
  .popup {
    padding: 10px; /* Reduced padding on mobile */
  }
  
  .popup-content {
    width: 100%; /* Full width on mobile */
    padding: 20px; /* Reduced padding on mobile */
    max-height: 95vh; /* Slightly more height on mobile */
  }
  
  .popup-top {
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 15px; /* Reduced gap on mobile */
  }

  .popup-top img#popup-image {
    width: 100%;
    max-width: 100%;
  }

  .popup-details {
    width: 100%;
  }

  .popup-bottom {
    width: 100%;
  }
  
  /* Additional mobile-specific adjustments */
  .popup-option select {
    font-size: 14px; /* Slightly smaller font on mobile */
  }
  
  #add-to-cart {
    font-size: 14px; /* Slightly smaller font on mobile */
    padding: 10px 15px; /* Adjusted padding on mobile */
  }
}

/* Additional media query for very small devices */
@media (max-width: 480px) {
  .popup-content {
    padding: 15px;
  }
  
  .popup-top {
    gap: 10px;
  }
  
  .popup-details h2 {
    font-size: 14px;
  }
  
  .popup-details p {
    font-size: 11px;
  }
}