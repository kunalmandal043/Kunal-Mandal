.custom-grid {
  padding: 40px 20px;
  text-align: center;
  max-width: 1200px;
  margin: 0 auto;
}

.heading {
  font-family: "Lustria", serif;
  font-weight: 400;
  font-size: 36px;
  line-height: 120%;
  text-align: left;
  margin: 0 0 20px 0;
}

.grid-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 8px;
}

.grid-item {
  position: relative;
}

.grid-image-wrapper {
  position: relative;
}

.grid-image {
  width: 100%;
  height: auto;
  object-fit: cover;
}

.popup-icon {
  position: absolute;
  bottom: 10px;
  right: 10px;
  width: 22px;
  height: 22px;
  cursor: pointer;
  z-index: 2;
}

@media (max-width: 768px) {
  .grid-container {
    grid-template-columns: repeat(2, 1fr);
  }
  .popup-icon { width: 16px; height: 16px; }
}

/* Popup */
.popup {
  position: fixed;
  top: 0; left: 0;
  width: 100%; height: 100%;
  background: rgba(0,0,0,0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.popup.hidden { display: none; }

.popup-content {
  background: #fff;
  padding: 20px;
  max-width: 600px;
  width: 90%;
  border-radius: 10px;
  text-align: center;
  position: relative;
}

#popup-close {
  position: absolute;
  top: 10px; right: 15px;
  font-size: 24px;
  cursor: pointer;
}

#add-to-cart {
  margin-top: 20px;
  padding: 12px 24px;
  border: none;
  border-radius: 6px;
  cursor: pointer;
}

#add-to-cart:hover { background: #333; color: #fff; }
