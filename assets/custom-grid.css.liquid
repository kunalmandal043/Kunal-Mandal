.hidden {
  display: none !important;
}

.custom-grid {
  padding: 40px 20px;
  text-align: center;
  max-width: 1200px;
  margin: 0 auto;
}

.heading {
  font-family: "Lustria", serif;
  font-weight: 400;
  font-size: 36px;
  line-height: 120%;
  text-align: left;
  margin: 0 0 20px 0;
}

.grid-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 8px;
}

.grid-item {
  position: relative;
}

.grid-image-wrapper {
  position: relative;
  overflow: hidden;
}

.grid-image {
  width: 100%;
  height: auto;
  object-fit: cover;
}

.popup-icon {
  position: absolute;
  bottom: 30%;
  right: 60%;
  width: 22px;
  height: 22px;
  cursor: pointer;
  z-index: 4;
  background: white;
  border-radius: 50%;
  padding: 4px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.2);
}

/* Popup Styles */
.popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  padding: 20px;
  box-sizing: border-box;
  transition: opacity 0.4s ease, transform 0.4s ease;
}

.popup-content {
  background: white;
  padding: 30px;
  width: 100%;
  max-width: 400px;
  max-height: 95vh;
  overflow-y: auto;
  position: relative;
  box-sizing: border-box;
}

#popup-close {
  position: absolute;
  top: 15px;
  right: 15px;
  font-size: 24px;
  cursor: pointer;
  color: #333;
}

/* Popup Top Section: Image + Details */
.popup-top {
  display: flex;
  flex-direction: row;
  gap: 20px;
  margin-bottom: 20px;
}

.popup-top img#popup-image {
  width: 50%;
  max-width: 250px;
  height: auto;
  object-fit: cover;
}

.popup-details {
  flex: 1;
  text-align: left;
}

.popup-details h2 {
  font-family: 'Jost', sans-serif;
  font-weight: 300;
  font-size: 16px;
  line-height: 120%;
  margin-bottom: 10px;
}

.popup-details p {
  margin-bottom: 10px;
  font-family: 'Jost', sans-serif;
  font-weight: 300;
  font-size: 12px;
  line-height: 110%;
  letter-spacing: -0.01em;
}

/* Bottom Section */
.popup-bottom {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

#add-to-cart {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  background: #000;
  color: #fff;
  font-size: 16px;
  padding: 12px 20px;
  border: none;
  cursor: pointer;
  transition: background 0.3s ease;
  margin-top: 15px;
  width: 100%;
  box-sizing: border-box;
}

#add-to-cart:hover {
  background: #333;
}

/* Color options */
.color-options {
  display: flex;
  width: 100%;
  gap: 0; /* no gaps */
}

.color-option {
  position: relative;
  display: flex;
  align-items: center;
  flex: 1 1 50%;
  box-sizing: border-box;
  border: 1px solid #ddd;
  padding: 12px 12px 12px 32px; /* space for strip */
  cursor: pointer;
  transition: background 0.2s ease, border 0.2s ease, color 0.2s ease;
  border-radius: 0;
  margin: 0;
  text-align: left;
  font-size: 14px;
}

/* Left strip */
.color-option::before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  width: 20px;
  height: 100%;
  background: var(--swatch-color, #ccc);
}

/* Selected */
.color-option.selected {
  background: #000;
  color: #fff;
  border: 2px solid #000;
}

.color-option.selected::before {
  background: var(--swatch-color, #ccc);
}

/* Responsive */
@media (max-width: 768px) {
  .grid-container {
    grid-template-columns: repeat(2, 1fr);
  }
  .heading {
    text-align: center;
    font-size: 24px;
  }
  .popup-icon { 
    width: 16px; 
    height: 16px; 
  }
  .popup { padding: 10px; }
  .popup-content { padding: 20px; }
  .popup-top { flex-direction: column; align-items: center; text-align: center; gap: 15px; }
  .popup-top img#popup-image { width: 100%; max-width: 100%; }
}

@media (max-width: 480px) {
  .popup-content { padding: 15px; }
  .popup-details h2 { font-size: 14px; }
  .popup-details p { font-size: 11px; }
}
