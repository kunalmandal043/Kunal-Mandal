* { box-sizing: border-box; margin: 0; padding: 0; }
.hidden { display: none !important; }
body.popup-open, .body-no-scroll { overflow: hidden; }

/* Grid */
.custom-grid { padding: 40px 20px; text-align: center; max-width: 1200px; margin: 0 auto; }
.heading { font-family: "Lustria", serif; font-weight: 400; font-size: 36px; line-height: 120%; text-align: left; margin: 0 0 20px; }
.grid-container { display: grid; grid-template-columns: repeat(3,1fr); gap: 8px; }
.grid-item, .grid-image-wrapper { position: relative; }
.grid-image { width: 100%; height: auto; object-fit: cover; }

/* Popup icon */
.popup-icon { position: absolute; bottom: 30%; right: 60%; width: 22px; height: 22px; cursor: pointer; z-index: 4; border-radius: 50%; padding: 4px; box-shadow: 0 2px 5px rgba(0,0,0,.2); }

/* Popup */
.popup { position: fixed; inset: 0; display: flex; justify-content: center; align-items: center; z-index: 1000; padding: 20px; opacity: 0; visibility: hidden; background: rgba(0,0,0,.65); transition: opacity .4s, visibility .4s; overflow: hidden; }
.popup:not(.hidden) { opacity: 1; visibility: visible; }

/* Popup Content */
.popup-content {
  background: #fff;
  padding: 18px;
  width: 100%;
  max-width: 420px;   /* smaller popup */
  max-height: 80vh;
  overflow-y: auto;
  position: relative;
  border-radius: 6px;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  scrollbar-width: none; /* Firefox */
}
.popup-content::-webkit-scrollbar { display: none; }

/* Close btn */
#popup-close {
  position: absolute;
  top: 8px;
  right: 8px;
  width: 28px;
  height: 28px;
  border: none;
  background: #f2f2f2;
  color: #333;
  font-size: 18px;
  font-weight: bold;
  border-radius: 50%;
  cursor: pointer;
  line-height: 28px;
  text-align: center;
  transition: background 0.3s;
  z-index: 1100;
}
#popup-close:hover { background: #ddd; }
#popup-close:active { background: #bbb; }

/* Popup Top */
.popup-top {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-start;
  gap: 12px;
  margin-bottom: 15px;
  flex: 1;
  min-height: 0;
}
.popup-top img#popup-image {
  width: 40%;
  max-width: 200px;
  height: auto;
  object-fit: contain;
  border-radius: 4px;
  flex-shrink: 0;
}

.popup-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  text-align: left;
  min-width: 0;
  font-size: 13px;
  line-height: 1.3;
}
.popup-details h2, .popup-details p { font-family: 'Jost', sans-serif; font-weight: 300; }
.popup-details h2 { font-size: 16px; margin-bottom: 6px; word-wrap: break-word; }
.popup-details p { font-size: 13px; margin-bottom: 6px; line-height: 1.3; }
#popup-description {
  max-height: 100px;
  overflow-y: auto;
  font-size: 12px;
  line-height: 1.3;
  color: #444;
  scrollbar-width: none; /* Firefox */
}
#popup-description::-webkit-scrollbar { display: none; }

/* Color Options */
.color-swatches { display: flex; flex-wrap: wrap; margin-top: 6px; width: 100%; gap: 0; }
.color-option {
  display: flex;
  align-items: center;
  flex: 1 1 50%;
  border: 1px solid #ddd;
  cursor: pointer;
  min-height: 38px;
  position: relative;
  transition: .15s;
  margin: 0;
}
.color-option::before { content:""; width: 5px; height: 100%; margin-right: 8px; background: var(--color-bar,#ccc); box-shadow: inset 0 0 0 1px rgba(0,0,0,.06); }
.color-option.is-white::before { background: #fff; box-shadow: 0 0 0 1px #ddd; }
.color-option:hover { background: #f9f9f9; }
.color-option.selected { background:#000; color:#fff; border-color:#000; }
.color-option.selected::before { box-shadow: 0 0 0 1px rgba(255,255,255,.12); }
.color-option.selected.is-white::before { box-shadow: 0 0 0 1px rgba(0,0,0,.08); }
.color-name { font-size: 12px; overflow: hidden; text-overflow: ellipsis; }

/* Popup Bottom */
.popup-bottom { display: flex; flex-direction: column; gap: 10px; flex-shrink: 0; }
.popup-option { display: flex; flex-direction: column; text-align: left; }
.popup-option label { margin-bottom: 4px; font-weight: 500; font-size: 12px; }

/* Add to Cart */
#add-to-cart {
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  cursor: pointer;
  background: #000;
  transition: .3s;
  margin-top: 10px;
  width: 100%;
  height: 44px;
  color:#fff;
  font-size:14px;
}
#add-to-cart:disabled { opacity: .7; cursor: not-allowed; }
.add-to-cart-icon { height: 100%; object-fit: contain; }

/* Dropdown */
.custom-dropdown, .size-select-wrapper { position: relative; width: 100%; }
.dropdown-button { width: 100%; padding: 10px 16px; border: 1px solid #ddd; background: #fff; display: flex; justify-content: space-between; align-items: center; font-size: 14px; cursor: pointer; }
.dropdown-button.placeholder { color: #999; }
.dropdown-options { position: absolute; top: 100%; right: 0; width: 100%; border: 1px solid #ddd; border-top: none; background: #fff; z-index: 1001; max-height: 180px; overflow-y: auto; display: none; scrollbar-width: none; }
.dropdown-options::-webkit-scrollbar { display: none; }
.dropdown-option { padding: 10px 16px; text-align: center; cursor: pointer; transition: .2s; font-size: 13px; }
.dropdown-option:hover, .dropdown-option.selected { background: #000; color: #fff; }
.size-select-wrapper select { display: none; }
.size-arrow { position: absolute; right: 12px; top: 50%; transform: translateY(-50%); pointer-events: none; transition: .2s; }

/* Responsive */
@media (max-width: 768px) {
  .grid-container { grid-template-columns: repeat(2,1fr); }
  .heading { text-align: center; font-size: 24px; }
  .popup-icon { width: 16px; height: 16px; }
  .popup { padding: 10px; }
  .popup-content { padding: 15px; max-width: 90%; }

  .popup-top { flex-direction: row; align-items: flex-start; text-align: left; gap: 8px; }
  .popup-top img#popup-image { width: 42%; max-width: 140px; max-height: 28vh; }

  .popup-details { width: 58%; font-size: 11px; line-height: 1.2; }
  .popup-details h2 { font-size: 12px; margin-bottom: 3px; }
  .popup-details p { font-size: 11px; margin-bottom: 2px; } /* reduced gap */
  #popup-description {
    max-height: none;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    font-size: 11px;
    line-height: 1.2;
    margin-bottom: 4px;
  }

  .popup-bottom { width: 100%; gap: 6px; }
  .popup-option, .custom-dropdown, .size-select-wrapper, #add-to-cart { width: 100% !important; }
  #add-to-cart { height: 42px; font-size: 13px; }

  .color-swatches { flex-wrap: nowrap; gap: 0; }
  .color-option { flex: 1 1 auto; min-height: 36px; }
}

@media (max-width: 480px) {
  .popup-content { padding: 12px; max-width: 95%; }
  .popup-top { gap: 6px; }
  .popup-top img#popup-image { width: 45%; max-width: 120px; max-height: 26vh; }

  .popup-details h2 { font-size: 11px; margin-bottom: 2px; }
  .popup-details p, .popup-option label, .dropdown-button, .dropdown-option { font-size: 11px; padding: 6px 8px; margin-bottom: 2px; } /* less gap */
  #popup-description { font-size: 11px; -webkit-line-clamp: 3; line-height: 1.2; margin-bottom: 3px; }
  .color-name { font-size: 10px; }
  #popup-close { width: 24px; height: 24px; font-size: 14px; line-height: 24px; }
}
