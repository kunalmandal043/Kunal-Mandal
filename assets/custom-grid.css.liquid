.custom-grid {
  padding: 40px 20px;
  text-align: center;
  max-width: 1200px;
  margin: 0 auto;
}

/* Section Heading */
.heading {
  width: 372px;
  height: 43px;
  font-family: "Lustria", serif;
  font-weight: 400;
  font-size: 36px;
  line-height: 120%;
  text-align: left;
  margin: 0 0 20px 0;
}

/* Grid */
.grid-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20px;
  margin-top: 20px;
}

.grid-item {
  padding: 10px;
  border-radius: 8px;
  position: relative;
  display: inline-block;
}

.grid-image {
  width: 100%;
  max-width: 433px;
  aspect-ratio: 433 / 444;
  object-fit: cover;
  display: block;
  margin: 0 auto;
}

.popup-icon {
  position: absolute;
  bottom: 30%;
  right: 50%;
  width: 22px;
  height: 22px;
  cursor: pointer;
  opacity: 0.9;
  z-index: 2;
}

.popup-icon:hover { opacity: 1; }

/* Responsive */
@media (max-width: 768px) {
  .heading {
    width: 248px;
    font-size: 24px;
    text-align: center;
    margin: 0 auto 20px auto;
  }
  .grid-container {
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
  }
  .popup-icon {
    width: 16px;
    height: 16px;
  }
}

/* Popup */
.popup {
  position: fixed;
  top: 0; left: 0;
  width: 100%; height: 100%;
  background: rgba(0,0,0,0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}
.popup.hidden { display: none; }

.popup-content {
  background: #fff;
  padding: 20px;
  max-width: 500px;
  width: 90%;
  border-radius: 10px;
  text-align: center;
  position: relative;
}

#popup-close {
  position: absolute;
  top: 10px; right: 15px;
  font-size: 24px;
  cursor: pointer;
}

.variant-section {
  margin-top: 20px;
  text-align: left;
}
.variant-field {
  display: flex;
  align-items: center;
  margin-bottom: 12px;
}
.variant-icon {
  width: 20px;
  height: 20px;
  margin-right: 8px;
}

.add-to-cart-btn {
  margin-top: 20px;
  background: none;
  border: none;
  cursor: pointer;
}
.add-to-cart-btn img {
  width: 160px;
}
