/* Grid styling */
.custom-grid {
  padding: 40px 20px;
  text-align: center;
}

.grid-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr); /* 3 images per row for desktop */
  gap: 20px;
  margin-top: 20px;
}
.heading {
  width: 372px;
  height: 43px;
  font-family: "Lustria", serif;
  font-weight: 400;
  font-style: normal;
  font-size: 36px;
  line-height: 120%; /* ~43px */
  letter-spacing: 0px;
  vertical-align: middle;
  text-align: left; /* Desktop left aligned */
  margin: 0 0 20px 0;
}

/* Mobile styles */
@media (max-width: 768px) {
  .heading {
    width: 248px;
    height: 29px;
    font-style: normal;
    font-size: 24px;
    line-height: 120%; /* ~29px */
    letter-spacing: 0px;
    text-align: center; /* Center aligned on mobile */
    margin: 0 auto 20px auto; /* keep centered */
  }
}



.grid-item {
  cursor: pointer;
  border: 1px solid #eee;
  padding: 10px;
  border-radius: 8px;
  transition: transform 0.2s ease;
}



/* Image fixed size on desktop */
.grid-item img {
  width: 433px;
  height: 444px;
  object-fit: cover; /* Ensures proper crop */
  display: block;
  margin: 0 auto;
}

/* Mobile view: 2 images per row */
@media (max-width: 768px) {
  .grid-container {
    grid-template-columns: repeat(2, 1fr);
  }

  .grid-item img {
    width: 100%;   /* scale down for smaller screens */
    height: auto;  /* keep aspect ratio */
  }
}

/* Very small screens: 1 per row */
@media (max-width: 480px) {
  .grid-container {
    grid-template-columns: 1fr;
  }
}

/* Popup styles */
.popup {
  position: fixed;
  top: 0; left: 0;
  width: 100%; height: 100%;
  background: rgba(0,0,0,0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}
.popup.hidden { display: none; }

.popup-content {
  background: #fff;
  padding: 20px;
  max-width: 500px;
  width: 90%;
  border-radius: 10px;
  text-align: center;
  position: relative;
}
#popup-close {
  position: absolute;
  top: 10px; right: 15px;
  font-size: 24px;
  cursor: pointer;
}
#add-to-cart {
  margin-top: 20px;
  background: #000;
  color: #fff;
  padding: 12px 24px;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  transition: background 0.3s ease;
}
#add-to-cart:hover {
  background: #333;
}
