.custom-banner{
  background-image: url('{{ "bg-img.svg" | asset_url }}');
  width: 1440;
  height: 878;
  angle: 0 deg;
  opacity: 1;

}
.custom-banner .banner-head{
width: 1440;
height: 64;
gap: 360px;
angle: 0 deg;
opacity: 1;
padding-top: 10px;
padding-right: 50px;
padding-bottom: 10px;
padding-left: 50px;
background: #F5F5F5;


}
.brand{ width: 151.44406127929688;
height: 19;
angle: 0 deg;
opacity: 1;
 }
.banner-head__center{ 
  width: 260;
  height: 14;
  angle: 0 deg;
  opacity: 1;
  font-family: Jost;
font-weight: 400;
font-style: Regular;
font-size: 16px;
leading-trim: NONE;
line-height: 13.42px;
letter-spacing: 0px;
text-align: center;
vertical-align: middle;
text: #000000;


 
}
.banner-cta{
  display:inline-flex; align-items:center; gap:10px;
  background:#ffe84a; color:#111; text-decoration:none;
  padding:12px 18px; border-radius:6px; border:2px solid #111;
  transition: transform .16s ease, box-shadow .16s ease, filter .16s ease;
}
.banner-cta__icon{ font-weight:700; }
.banner-cta:hover{ transform:translateY(-2px); filter:brightness(.97); box-shadow:0 6px 18px rgba(0,0,0,.12); }

.banner-title{ font-size:clamp(36px,7vw,80px); line-height:1; margin:28px 0 12px; }
.banner-sub{ max-width:640px; border:2px solid #111; background:#fff; padding:16px 20px; }
.banner-btn{
  display:inline-block; margin-top:18px; padding:14px 24px; border-radius:6px;
  background:#111; color:#fff; border:2px solid #111; text-decoration:none;
  transition: transform .16s ease, box-shadow .16s ease;
}
.banner-btn:hover{ transform:translateY(-2px); box-shadow:0 6px 18px rgba(0,0,0,.12); }
.banner-bottom{ text-align:center; background:#eee; border-top:2px solid #111; padding:8px 12px; }

@media (max-width:768px){
  .custom-banner .banner-head{ flex-wrap:wrap; row-gap:8px; }
  .banner-head__center{ order:3; width:100%; font-size:13px; }
}

