.custom-banner{
  width: 100%;
  min-height: 780px;                 /* or use padding to control height */
  background-image: url('{{ "bg-img.svg" | asset_url }}');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
 
}

/* Header bar */
.banner-head{
  display: flex;
  align-items: center;
  justify-content: space-between;    /* left / center / right */
  gap: 16px;                         /* not 360px fixed */
  padding: 10px 50px;
  background: #F5F5F5;
  width: 100%;
  height: 64px;                      /* optional; can be auto */
}

/* Left brand */
.banner-head__left{ display:flex; align-items:center; }
.brand{
  font-weight: 700;                   /* not text:bold; */
  font-size: 20px;
  line-height: 1;
  text-transform: uppercase;
  /* remove fixed width/height to avoid clipping */
}

/* Center note */
.banner-head__center{
  margin: 0 auto;
  text-align: center;
  color: #000;                        /* not text:#000000; */
  font-family: Jost, system-ui, sans-serif;
  font-weight: 400;
  font-size: 16px;
  line-height: 1.1;
  /* remove width/height/angle/leading-trim */
}

.banner-head__right{
  width: 207px;
  height: 44px;
  background: rgba(255, 245, 68, 1);

  display : flex;
}

.banner-cta{
  width: 102px;
  height: 21px;
  opacity: 1;
  display: flex;

  position: relative;      /* add positioning if top/left should apply */
  top: 11.67px;
  left: 41px;

  font-family: "Jost", system-ui, sans-serif;
  font-weight: 400;
  font-style: normal;      /* “Regular” → normal */
  font-size: 16px;
  line-height: 20.48px;    /* or 1.28 */
  letter-spacing: 0;
  text-decoration: none;
  
  text-align: center;
  text-transform: uppercase;
  text: rgba(0, 0, 0, 1);
  

}
.btn-icon{

  width: 24px;                      /* fixed line length */
  height: 0;                        /* draw the line via the border */
  opacity: 1;

  /* optional positioning relative to parent if needed */
  /* position: relative; top: 21.55px; left: 161px; */

  border-top: 1.5px solid rgba(0, 0, 0, 1);
  border-right: 0;
  border-bottom: 0;
  border-left: 0;

  /* center within a block parent */
  margin-left: auto;
  margin-right: auto;
}






