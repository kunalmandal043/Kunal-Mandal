* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}
.custom-banner {
  width: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: relative;
}

/* ------------------ HEADER ------------------ */
.banner-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16px;
  padding: 10px 5%;
  background: #F5F5F5;
  width: 100%;
  height: auto;
  flex-wrap: wrap;
  position: relative;
  /* z-index: 1001; */
}

.brand {
  font-weight: 900;
  font-size: 1.25rem;
  text-transform: uppercase;
}

.banner-head__center {
  margin: 0 auto;
  text-align: center;
  font-family: Jost, system-ui, sans-serif;
  font-weight: 400;
  font-size: 1rem;
}
.banner-taskbar{
  display:none;
}

/* ------------------ HOVER EFFECT FOR TOP-RIGHT CTA ------------------ */
.banner-head__right {
  position: relative;
  overflow: hidden;
  background: rgba(255, 245, 68, 1);
  padding: 10px 20px;
  display: flex;
  align-items: center;
  cursor: pointer;
  transition: color 0.4s ease-in-out;
}

/* Sliding black overlay */
.banner-head__right::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: #000;
  z-index: 0;
  transition: left 0.4s ease-in-out;
}

.banner-head__right:hover::before {
  left: 0;
}

.banner-head__right .banner-cta {
  position: relative;
  z-index: 1;
  color: #000;
  font-weight: 400;
  font-family: "Jost", system-ui, sans-serif;
  font-size: 1rem;
  text-decoration: none;
  text-transform: uppercase;
  display: flex;
  align-items: center;
  gap: 8px;
  transition: color 0.4s ease-in-out;
}

.banner-head__right .banner-cta img {
  width: 20px;
  height: 20px;
  filter: brightness(0);
  transition: filter 0.4s ease-in-out;
}

.banner-head__right:hover .banner-cta {
  color: #fff;
}

.banner-head__right:hover .banner-cta img {
  filter: brightness(0) invert(1);
}

/* ------------------ BODY ------------------ */
.banner-body {
  position: relative;
  width: 100%;
  height: 100vh;
  background: url('{{ "bg-img.svg" | asset_url }}') no-repeat center center;
  background-size: cover;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 5%;
  color: #000;
}

.body-text {
  position: absolute;
  top: 400px;
  left: 67px;
  max-width: 600px;
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.banner-title {
  font-family: "Jost", sans-serif;
  font-weight: 500;
  font-size: clamp(2rem, 6vw, 4.5rem);
  line-height: 1.1;
  margin-bottom: 1rem;
  max-width: 90%;
}

.banner-sub {
  max-width: 483px;
  position: relative;
  font-family: "Jost", sans-serif;
  font-weight: 400;
  font-size: 20px;
  line-height: 1.4;
  color: #000;
  margin-top: 20px;
  white-space: normal;
  letter-spacing: 0px;
}

/* ------------------ SHOP NOW BUTTON ------------------ */
.banner-head__bottom {
  position: relative;
  width: fit-content;
  padding: 12px 24px;
  margin-top: 1.5rem;
  background: #000;
  overflow: hidden;
  cursor: pointer;
}

.banner-head__bottom::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: rgba(255, 245, 68, 1);
  z-index: 0;
  transition: left 0.4s ease-in-out;
}

.banner-head__bottom:hover::before {
  left: 0;
}

.bottom-banner-cta {
  position: relative;
  z-index: 1;
  font-family: "Jost", system-ui, sans-serif;
  font-weight: 400;
  font-size: 1rem;
  text-decoration: none;
  text-transform: uppercase;
  color: #fff;
  display: flex;
  align-items: center;
  gap: 8px;
  transition: color 0.4s ease-in-out;
}

.bottom-btn-icon {
  width: 20px;
  height: 20px;
  filter: brightness(0) invert(1);
  transition: filter 0.4s ease-in-out;
}

.banner-head__bottom:hover .bottom-banner-cta {
  color: #000;
}

.banner-head__bottom:hover .bottom-btn-icon {
  filter: brightness(0) invert(0);
}

/* ------------------ FOOTER ------------------ */
.banner-footer {
  background: #F5F5F5;
  min-height: 34px;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10px;
}

.banner-bottom {
  font-family: "Jost", system-ui, sans-serif;
  font-size: 0.875rem;
  font-weight: 400;
  color: #000;
  margin: 0;
  text-align: center;
}

/* ------------------ SMOOTH MOBILE DROPDOWN STYLES ------------------ */
.mobile-dropdown {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  z-index: 9999;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  padding-top: 80px;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.mobile-dropdown.active {
  opacity: 1;
  visibility: visible;
  transition: all 0.3s ease;
}

.mobile-dropdown.closing {
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.mobile-dropdown__content {
  background: #F5F5F5;
  width: 90%;
  max-width: 400px;
  border-radius: 8px;
  padding: 30px 20px;
  display: flex;
  flex-direction: column;
  gap: 25px;
  align-items: center;
  box-shadow: 0 5px 25px rgba(0, 0, 0, 0.2);
  transform: translateY(-20px);
  transition: transform 0.3s ease;
}

.mobile-dropdown.active .mobile-dropdown__content {
  transform: translateY(0);
  transition: transform 0.3s ease;
}

.mobile-dropdown.closing .mobile-dropdown__content {
  transform: translateY(-20px);
  transition: transform 0.3s ease;
}

.mobile-dropdown__center {
  font-family: Jost, system-ui, sans-serif;
  font-weight: 400;
  font-size: 1.1rem;
  text-align: center;
  margin: 0;
  color: #000;
}

.mobile-dropdown__cta {
  display: flex;
  align-items: center;
  gap: 8px;
  font-family: "Jost", system-ui, sans-serif;
  font-weight: 400;
  font-size: 1rem;
  text-decoration: none;
  text-transform: uppercase;
  color: #000;
  padding: 12px 24px;
  background: rgba(255, 245, 68, 1);
  border-radius: 4px;
  transition: all 0.3s ease;
}

.mobile-dropdown__cta:hover {
  background: #000;
  color: #fff;
}

.mobile-dropdown__cta:hover img {
  filter: brightness(0) invert(1);
}

/* ------------------ RESPONSIVE FIXES ------------------ */
@media (max-width: 768px) {
  .banner-body {
    position: relative;
    min-height: 80vh;
    justify-content: flex-start;
    background: none;
    overflow: hidden;
    --mobile-zoom: 1.8;
  }

  .banner-body::before {
    content: "";
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    
    width: 100%;
    height: 100%;
    background: url('{{ "mobile-bg-img.svg" | asset_url }}') no-repeat center bottom;
    background-size: 180% auto;
    background-size: calc(190% * var(--mobile-zoom)) auto;
    background-position: center bottom;
    z-index: -1;
    pointer-events: none;
  }

  .body-text {
    position: static;
    top: auto;
    left: auto;
    transform: none;
    max-width: 100%;
    margin: 0 auto;
    text-align: center;
    gap: 15px;
    padding-top: 20px;
    z-index: 2;
  }

  .banner-title {
    font-size: 3rem;
    font-weight: 500;
    line-height: 1.2;
    margin-top: 100;
    width: 100%;
    text-align: center;
  }

  .banner-sub {
    font-size: 1.4rem;
    line-height: 2.0;
    margin: 0 auto;
    max-width: 90%;
    text-align: center;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: hidden;
  }

  .banner-head__bottom {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    margin: 0;
    width: auto;
    z-index: 2;
  }

  .bottom-banner-cta {
    justify-content: center;
    width: auto;
  }

  /* ------------------ MOBILE HEADER FIXES ------------------ */
  
  .banner-head {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    padding: 10px 16px;
    height: 60px;
    z-index: 10000; /* Higher than dropdown */
  }

  /* Taskbar pinned left */
  .banner-taskbar {
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    left: 16px;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    padding: 0;
    cursor: pointer;
    z-index: 10001; /* Highest z-index */
  }

  .banner-taskbar img {
    width: 28px;
    height: 28px;
  }

  /* Hide center + right on mobile */
  .banner-head__center,
  .banner-head__right {
    display: none !important;
  }

  /* Brand text perfectly centered */
  .banner-head__left {
    margin: 0;
    flex: 1;
    display: flex;
    justify-content: center;
  }

  .banner-head__left .brand {
    font-size: 1.5rem;
    font-weight: 900;
  }
}

/* Prevent body scrolling when menu is open */
body.mobile-menu-open {
  overflow: hidden;
}