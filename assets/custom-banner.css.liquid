.custom-banner {
  width: 100%;
  min-height: 780px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}


/* ------------------ HEADER ------------------ */
.banner-head {
  display: flex;
  align-items: center;
  justify-content: space-between; /* left / center / right */
  gap: 16px;
  padding: 10px 50px;
  background: #F5F5F5;
  width: 100%;
  height: 64px;
}

.banner-head__left { display: flex; align-items: center; }

.brand {
  font-weight: 700;
  font-size: 20px;
  line-height: 1;
  text-transform: uppercase;
}

.banner-head__center {
  margin: 0 auto;
  text-align: center;
  color: #000;
  font-family: Jost, system-ui, sans-serif;
  font-weight: 400;
  font-size: 16px;
  line-height: 1.1;
}

.banner-head__right {
  background: rgba(255, 245, 68, 1);
  padding: 10px 20px;
  display: flex;
  align-items: center;
}

.banner-cta {
  font-family: "Jost", system-ui, sans-serif;
  font-weight: 400;
  font-size: 16px;
  text-decoration: none;
  text-align: center;
  text-transform: uppercase;
  color: #000;
  display: flex;
  align-items: center;
  gap: 8px;
  z-index:2;
}


.btn-icon {
  width: 20px;
  height: 20px;
}

/* ------------------ BODY ------------------ */
.banner-body {
  height: 85vh; /* adjust based on your design */
  display: flex;
  flex-direction: column;
  align-items: flex-start; /* left align text */
  justify-content: center; /* vertical center */
  text-align: left;
  padding: 40px 20px;

  /* background image */
  background-image: url('{{ "bg-img.svg" | asset_url }}');
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover; /* fully cover area */
}

.body-text {
  margin-left: 67px; /* move text away from left */
  max-width: 600px; /* optional readability */
}



.banner-title {
  font-family: "Jost", system-ui, sans-serif;
  font-weight: 500;
  font-size: 70px;
  line-height: 1.1;
  color: rgba(0, 0, 0, 1);
  margin-bottom: 20px;
}

.banner-sub {
  font-family: "Jost", system-ui, sans-serif;
  font-weight: 400;
  font-size: 18px;
  line-height: 1.4;
  max-width: 600px;
  margin: 0 auto 30px;
}

.banner-btn {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  text-decoration: none;
  font-family: "Jost", system-ui, sans-serif;
  font-size: 16px;
  font-weight: 500;
  text-transform: uppercase;
  background: rgba(255, 245, 68, 1);
  color: #000;
  padding: 12px 24px;
  border-radius: 4px;
  transition: background 0.3s ease;
}

.banner-btn:hover {
  background: rgba(230, 220, 50, 1);
}

/* ------------------ FOOTER ------------------ */
.banner-footer {
  background: rgba(245, 245, 245, 1);
  height: 34px;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 20px;
}

.banner-bottom {
  font-family: "Jost", system-ui, sans-serif;
  font-size: 14px;
  font-weight: 400;
  color: #000;
  margin: 0;
  text-align: center;
}
