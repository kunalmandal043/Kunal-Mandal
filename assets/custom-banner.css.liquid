.custom-banner {
  width: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/* ------------------ HEADER ------------------ */
.banner-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16px;
  padding: 10px 5%;
  background: #F5F5F5;
  width: 100%;
  height: auto;
  flex-wrap: wrap;
}

.brand {
  font-weight: 700;
  font-size: 1.25rem;
  text-transform: uppercase;
}

.banner-head__center {
  margin: 0 auto;
  text-align: center;
  font-family: Jost, system-ui, sans-serif;
  font-weight: 400;
  font-size: 1rem;
}

.banner-head__right {
  background: rgba(255, 245, 68, 1);
  padding: 10px 20px;
  display: flex;
  align-items: center;
}

.banner-cta {
  font-family: "Jost", system-ui, sans-serif;
  font-size: 1rem;
  text-decoration: none;
  text-transform: uppercase;
  color: #000;
  display: flex;
  align-items: center;
  gap: 8px;
}

/* ------------------ BODY ------------------ */
.banner-body {
  position: relative;
  width: 100%;
  height: 100vh;
  background: url('{{ "bg-img.svg" | asset_url }}') no-repeat center center;
  background-size: cover;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 5%;
  color: #000;
}

.body-text {
  position: absolute;
  top: 400px;   /* fixed 489px from top */
  left: 67px;   /* same as your design */
  max-width: 600px;

  display: flex;
  flex-direction: column; /* stack title and subtitle */
  gap: 20px; /* space between title and sub text */
}


.banner-title {
  font-family: "Jost", sans-serif;
  font-weight: 500;
  font-size: clamp(2rem, 6vw, 4.5rem);
  line-height: 1.1;
  margin-bottom: 1rem;
  max-width: 90%;
}

.banner-sub {
  max-width: 483px;       /* enough room for wrapping */
  position: relative;     /* no need absolute unless exact placement */
  font-family: "Jost", sans-serif;
  font-weight: 400;
  font-size: 20px;
  line-height: 1.4;       /* better readability */
  color: #000;            /* make sure text is visible */
  margin-top: 20px;       /* spacing below title */
  white-space: normal;    /* allow wrapping naturally */
}


.banner-head__bottom {
  width: fit-content;
  padding: 12px 24px;
  background: #000;
  margin-top: 1.5rem;
}

.bottom-banner-cta {
  font-family: "Jost", system-ui, sans-serif;
  font-weight: 400;
  font-size: 1rem;
  text-decoration: none;
  text-transform: uppercase;
  color: #fff;
  display: flex;
  align-items: center;
  gap: 8px;
  
}

/* ------------------ FOOTER ------------------ */
.banner-footer {
  background: #F5F5F5;
  min-height: 34px;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10px;
}

.banner-bottom {
  font-family: "Jost", system-ui, sans-serif;
  font-size: 0.875rem;
  font-weight: 400;
  color: #000;
  margin: 0;
  text-align: center;
}

/* ------------------ RESPONSIVE ------------------ */
@media (max-width: 1024px) {
  .banner-head {
    padding: 10px 20px;
  }

  .banner-body {
    height: auto;
    padding: 40px 20px;
  }

  .banner-title {
    font-size: 2.5rem;
  }
}

@media (max-width: 768px) {
  .banner-head {
    flex-direction: column;
    align-items: flex-start;
    gap: 10px;
  }

  .banner-title {
    font-size: 2rem;
  }

  .banner-sub {
    font-size: 1rem;
  }
}

@media (max-width: 480px) {
  .banner-body {
    padding: 20px;
  }

  .banner-title {
    font-size: 1.75rem;
  }

  .banner-sub {
    font-size: 0.9rem;
  }

  .banner-head__bottom {
    width: 100%;
    text-align: center;
  }

  .bottom-banner-cta {
    justify-content: center;
    width: 100%;
  }
}
