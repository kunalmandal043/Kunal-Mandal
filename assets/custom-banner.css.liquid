.custom-banner{
  width: 100%;
  min-height: 878px;                 /* or use padding to control height */
  background-image: url('{{ "bg-img.svg" | asset_url }}');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  /* remove: angle, opacity, object-fit (not for background) */
}

/* Header bar */
.banner-head{
  display: flex;
  align-items: center;
  justify-content: space-between;    /* left / center / right */
  gap: 16px;                         /* not 360px fixed */
  padding: 10px 50px;
  background: #F5F5F5;
  width: 100%;
  height: 64px;                      /* optional; can be auto */
}

/* Left brand */
.banner-head__left{ display:flex; align-items:center; }
.brand{
  font-weight: 700;                   /* not text:bold; */
  font-size: 20px;
  line-height: 1;
  /* remove fixed width/height to avoid clipping */
}

/* Center note */
.banner-head__center{
  margin: 0 auto;
  text-align: center;
  color: #000;                        /* not text:#000000; */
  font-family: Jost, system-ui, sans-serif;
  font-weight: 400;
  font-size: 16px;
  line-height: 1.1;
  /* remove width/height/angle/leading-trim */
}

/* Right CTA stays as previously defined */
.banner-cta{ /* from earlier snippet */ }
