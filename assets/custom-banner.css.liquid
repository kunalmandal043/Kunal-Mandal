/* GLOBAL RESET */
* {
  box-sizing: border-box; /* Include padding/border in element width/height */
  margin: 0; /* Remove default margins */
  padding: 0; /* Remove default padding */
}

/*  MAIN BANNER CONTAINER  */
.custom-banner {
  width: 100%; /* Full width */
  min-height: 100vh; /* At least full viewport height */
  display: flex; /* Flex container */
  flex-direction: column; /* Stack children vertically */
  justify-content: space-between; /* Spread header, body, footer */
  position: relative; /* For absolute children positioning */
}

/*  HEADER - */
.banner-head {
  display: flex; /* Flex layout for logo, center text, CTA */
  align-items: center; /* Vertically center items */
  justify-content: space-between; /* Space between children */
  gap: 16px; /* Gap between elements */
  padding: 10px 5%; /* Inner spacing */
  background: #F5F5F5; /* Light gray background */
  width: 100%; 
  height: auto;
  flex-wrap: wrap; /* Wrap elements if needed */
  position: relative;
  /* z-index: 1001; */ /* Optional: keep above banner */
}

/* Brand/logo text */
.brand {
  font-weight: 900; /* Bold */
  font-size: 1.25rem; /* Medium-large font */
  text-transform: uppercase; /* Uppercase letters */
}

/* Center text in header */
.banner-head__center {
  margin: 0 auto;
  text-align: center;
  font-family: Jost, system-ui, sans-serif;
  font-weight: 400;
  font-size: 1rem;
}

/* Taskbar (hamburger/menu) hidden by default */
.banner-taskbar {
  display: none;
}

/* HEADER CTA HOVER EFFECT  */
.banner-head__right {
  position: relative;
  overflow: hidden; /* Clip sliding overlay */
  background: rgba(255, 245, 68, 1); /* Yellow background */
  padding: 10px 20px;
  display: flex;
  align-items: center;
  cursor: pointer;
  transition: color 0.4s ease-in-out; /* Smooth color change */
}

/* Sliding black overlay on hover */
.banner-head__right::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%; /* Start hidden off-screen */
  width: 100%;
  height: 100%;
  background: #000;
  z-index: 0; /* Behind text */
  transition: left 0.4s ease-in-out; /* Smooth slide */
}

.banner-head__right:hover::before {
  left: 0; /* Slide overlay fully */
}

/* CTA text inside right header */
.banner-head__right .banner-cta {
  position: relative;
  z-index: 1; /* Above overlay */
  color: #000;
  font-weight: 400;
  font-family: "Jost", system-ui, sans-serif;
  font-size: 1rem;
  text-decoration: none;
  text-transform: uppercase;
  display: flex;
  align-items: center;
  gap: 8px;
  transition: color 0.4s ease-in-out;
}

/* Icon inside CTA */
.banner-head__right .banner-cta img {
  width: 20px;
  height: 20px;
  filter: brightness(0); /* Black icon */
  transition: filter 0.4s ease-in-out;
}

/* Change color of CTA text & icon on hover */
.banner-head__right:hover .banner-cta {
  color: #fff;
}

.banner-head__right:hover .banner-cta img {
  filter: brightness(0) invert(1); /* White icon */
}

/*  BODY */
.banner-body {
  position: relative;
  width: 100%;
  height: 100vh; /* Full viewport height */
  background: url('{{ "bg-img.svg" | asset_url }}') no-repeat center center;
  background-size: cover; /* Cover entire container */
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 5%;
  color: #000;
}

/* Text content inside body */
.body-text {
  position: absolute; /* Position relative to banner-body */
  top: 400px;
  left: 67px;
  max-width: 600px;
  display: flex;
  flex-direction: column;
  gap: 20px;
}

/* Banner title */
.banner-title {
  font-family: "Jost", sans-serif;
  font-weight: 500;
  font-size: clamp(2rem, 6vw, 4.5rem); /* Responsive font */
  line-height: 1.1;
  margin-bottom: 1rem;
  max-width: 90%;
}

/* Banner subtitle */
.banner-sub {
  max-width: 483px;
  font-family: "Jost", sans-serif;
  font-weight: 400;
  font-size: 20px;
  line-height: 1.4;
  color: #000;
  margin-top: 20px;
  white-space: normal;
  letter-spacing: 0px;
}

/* SHOP NOW BUTTON  */
.banner-head__bottom {
  position: relative;
  width: fit-content;
  padding: 12px 24px;
  margin-top: 1.5rem;
  background: #000; /* Black button */
  overflow: hidden; /* Clip sliding overlay */
  cursor: pointer;
}

/* Sliding yellow overlay */
.banner-head__bottom::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%; /* Start hidden */
  width: 100%;
  height: 100%;
  background: rgba(255, 245, 68, 1); /* Yellow */
  z-index: 0; /* Behind text */
  transition: left 0.4s ease-in-out;
}

.banner-head__bottom:hover::before {
  left: 0; /* Slide overlay */
}

/* CTA text on button */
.bottom-banner-cta {
  position: relative;
  z-index: 1; /* Above overlay */
  font-family: "Jost", system-ui, sans-serif;
  font-weight: 400;
  font-size: 1rem;
  text-decoration: none;
  text-transform: uppercase;
  color: #fff;
  display: flex;
  align-items: center;
  gap: 8px;
  transition: color 0.4s ease-in-out;
}

/* Icon inside button */
.bottom-btn-icon {
  width: 20px;
  height: 20px;
  filter: brightness(0) invert(1);
  transition: filter 0.4s ease-in-out;
}

/* Change button text & icon on hover */
.banner-head__bottom:hover .bottom-banner-cta {
  color: #000;
}

.banner-head__bottom:hover .bottom-btn-icon {
  filter: brightness(0) invert(0);
}

/*  FOOTER  */
.banner-footer {
  background: #F5F5F5; /* Light gray */
  min-height: 34px;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10px;
}

.banner-bottom {
  font-family: "Jost", system-ui, sans-serif;
  font-size: 0.875rem;
  font-weight: 400;
  color: #000;
  margin: 0;
  text-align: center;
}

/*  MOBILE DROPDOWN  */
.mobile-dropdown {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7); /* Semi-transparent overlay */
  z-index: 9999;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  padding-top: 80px;
  opacity: 0; /* Hidden by default */
  visibility: hidden;
  transition: all 0.3s ease;
}

.mobile-dropdown.active {
  opacity: 1;
  visibility: visible; /* Show dropdown */
}

.mobile-dropdown.closing {
  opacity: 0;
  visibility: hidden; /* Hide dropdown */
}

.mobile-dropdown__content {
  background: #F5F5F5;
  width: 90%;
  max-width: 400px;
  border-radius: 8px;
  padding: 30px 20px;
  display: flex;
  flex-direction: column;
  gap: 25px;
  align-items: center;
  box-shadow: 0 5px 25px rgba(0, 0, 0, 0.2);
  transform: translateY(-20px);
  transition: transform 0.3s ease;
}

/* Animate dropdown content */
.mobile-dropdown.active .mobile-dropdown__content {
  transform: translateY(0);
}

.mobile-dropdown.closing .mobile-dropdown__content {
  transform: translateY(-20px);
}

/* Centered text inside dropdown */
.mobile-dropdown__center {
  font-family: Jost, system-ui, sans-serif;
  font-weight: 400;
  font-size: 1.1rem;
  text-align: center;
  margin: 0;
  color: #000;
}

/* CTA button inside mobile dropdown */
.mobile-dropdown__cta {
  display: flex;
  align-items: center;
  gap: 8px;
  font-family: "Jost", system-ui, sans-serif;
  font-weight: 400;
  font-size: 1rem;
  text-decoration: none;
  text-transform: uppercase;
  color: #000;
  padding: 12px 24px;
  background: rgba(255, 245, 68, 1);
  border-radius: 4px;
  transition: all 0.3s ease;
}

.mobile-dropdown__cta:hover {
  background: #000;
  color: #fff;
}

.mobile-dropdown__cta:hover img {
  filter: brightness(0) invert(1);
}

/* RESPONSIVE STYLES */
@media (max-width: 768px) {
  /* Adjust banner body for mobile */
  .banner-body {
    position: relative;
    min-height: 80vh;
    justify-content: flex-start;
    background: none; /* Remove desktop background */
    overflow: hidden;
    --mobile-zoom: 1.8; /* Custom variable for zoom effect */
  }

  /* Mobile background image */
  .banner-body::before {
    content: "";
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 100%;
    height: 100%;
    background: url('{{ "mobile-bg-img.svg" | asset_url }}') no-repeat center bottom;
    background-size: calc(190% * var(--mobile-zoom)) auto;
    background-position: center bottom;
    z-index: -1; /* Behind content */
    pointer-events: none; /* Clicks pass through */
  }

  /* Adjust text for mobile */
  .body-text {
    position: static;
    max-width: 100%;
    margin: 0 auto;
    text-align: center;
    gap: 15px;
    padding-top: 20px;
    z-index: 2;
  }

  .banner-title {
    font-size: 3rem;
    text-align: center;
  }

  .banner-sub {
    font-size: 1.4rem;
    line-height: 2.0;
    margin: 0 auto;
    max-width: 90%;
    text-align: center;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Position bottom button on mobile */
  .banner-head__bottom {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    margin: 0;
    width: auto;
    z-index: 2;
  }

  .bottom-banner-cta {
    justify-content: center;
    width: auto;
  }

  /* ------------------ MOBILE HEADER ------------------ */
  .banner-head {
    justify-content: center;
    height: 60px;
    z-index: 10000; /* Above dropdown */
  }

  /* Show taskbar icon */
  .banner-taskbar {
    display: flex;
    position: absolute;
    left: 16px;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10001;
  }

  .banner-taskbar img {
    width: 28px;
    height: 28px;
  }

  /* Hide center and right header content */
  .banner-head__center,
  .banner-head__right {
    display: none !important;
  }

  /* Brand perfectly centered */
  .banner-head__left {
    margin: 0;
    flex: 1;
    display: flex;
    justify-content: center;
  }

  .banner-head__left .brand {
    font-size: 1.5rem;
    font-weight: 900;
  }
}

/* Prevent body scroll when mobile menu is open */
body.mobile-menu-open {
  overflow: hidden;
}
