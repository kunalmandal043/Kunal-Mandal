/* ------------------ BASE ------------------ */
.custom-banner {
  width: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/* ------------------ HEADER ------------------ */
.banner-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16px;
  padding: 10px 5%;
  background: #F5F5F5;
  width: 100%;
  flex-wrap: wrap;
}

.brand {
  font-weight: 900;
  font-size: 1.25rem;
  text-transform: uppercase;
}

.banner-head__center {
  margin: 0 auto;
  text-align: center;
  font-family: Jost, system-ui, sans-serif;
  font-weight: 400;
  font-size: 1rem;
}

/* ------------------ TOP-RIGHT CTA ------------------ */
.banner-head__right {
  position: relative;
  overflow: hidden;
  background: rgba(255, 245, 68, 1);
  padding: 10px 20px;
  display: flex;
  align-items: center;
  transition: color 0.4s ease-in-out;
}

.banner-head__right::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: #000;
  z-index: 0;
  transition: left 0.4s ease-in-out;
}

.banner-head__right:hover::before {
  left: 0;
}

.banner-head__right .banner-cta {
  position: relative;
  z-index: 1;
  color: #000;
  font-weight: 400;
  font-family: "Jost", system-ui, sans-serif;
  font-size: 1rem;
  text-decoration: none;
  text-transform: uppercase;
  display: flex;
  align-items: center;
  gap: 8px;
  transition: color 0.4s ease-in-out;
}

.banner-head__right:hover .banner-cta {
  color: #fff;
}

.banner-head__right .banner-cta img {
  width: 20px;
  height: 20px;
  filter: brightness(0);
  transition: filter 0.4s ease-in-out;
}

.banner-head__right:hover .banner-cta img {
  filter: brightness(0) invert(1);
}

/* ------------------ BODY ------------------ */
.banner-body {
  position: relative;
  width: 100%;
  min-height: 70vh;
  background: url('{{ "bg-img.svg" | asset_url }}') no-repeat center center;
  background-size: cover;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 20px 5%;
  color: #000;
}

.body-text {
  max-width: 600px;
  display: flex;
  flex-direction: column;
  gap: 20px;
}

/* Use relative positioning for mobile */
@media (min-width: 769px) {
  .body-text {
    position: absolute;
    top: 400px;
    left: 67px;
  }
}

.banner-title {
  font-family: "Jost", sans-serif;
  font-weight: 500;
  font-size: clamp(2rem, 6vw, 4.5rem);
  line-height: 1.1;
  margin-bottom: 1rem;
  max-width: 90%;
}

.banner-sub {
  max-width: 100%;
  font-family: "Jost", sans-serif;
  font-weight: 400;
  font-size: 20px;
  line-height: 1.4;
  color: #000;
  margin-top: 20px;
  white-space: normal;
  letter-spacing: 0px;
}

/* ------------------ SHOP NOW BUTTON ------------------ */
.banner-head__bottom {
  position: relative;
  width: fit-content;
  padding: 12px 24px;
  margin-top: 1.5rem;
  background: #000;
  overflow: hidden;
}

.banner-head__bottom::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: rgba(255, 245, 68, 1);
  z-index: 0;
  transition: left 0.4s ease-in-out;
}

.banner-head__bottom:hover::before {
  left: 0;
}

.bottom-banner-cta {
  position: relative;
  z-index: 1;
  font-family: "Jost", system-ui, sans-serif;
  font-weight: 400;
  font-size: 1rem;
  text-decoration: none;
  text-transform: uppercase;
  color: #fff;
  display: inline-flex;
  align-items: center;
  column-gap: 12px;
  transition: color 0.4s ease-in-out;
}

.bottom-banner-cta img {
  width: 20px;
  height: 20px;
  filter: brightness(0) invert(1);
  transition: filter 0.4s ease-in-out;
}

.banner-head__bottom:hover .bottom-banner-cta {
  color: #000;
}

.banner-head__bottom:hover .bottom-banner-cta img {
  filter: brightness(0) invert(0);
}

/* ------------------ FOOTER ------------------ */
.banner-footer {
  background: #F5F5F5;
  min-height: 34px;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10px;
}

.banner-bottom {
  font-family: "Jost", system-ui, sans-serif;
  font-size: 0.875rem;
  font-weight: 400;
  color: #000;
  margin: 0;
  text-align: center;
}

/* ------------------ RESPONSIVE ------------------ */
@media (max-width: 1024px) {
  .banner-head {
    padding: 10px 20px;
  }

  .banner-body {
    min-height: 60vh;
    padding: 30px 20px;
  }

  .banner-title {
    font-size: 2.5rem;
  }
}

@media (max-width: 768px) {
  .banner-head {
    flex-direction: column;
    align-items: flex-start;
    gap: 10px;
  }

  .banner-title {
    font-size: 2rem;
  }

  .banner-sub {
    font-size: 1rem;
  }

  .banner-head__bottom {
    width: 100%;
    text-align: center;
  }

  .bottom-banner-cta {
    justify-content: center;
    width: 100%;
  }
}

@media (max-width: 480px) {
  .banner-title {
    font-size: 1.75rem;
  }

  .banner-sub {
    font-size: 0.9rem;
  }

  .body-text {
    position: relative;
    top: auto;
    left: auto;
    max-width: 100%;
  }

  .banner-head__bottom {
    width: 100%;
    padding: 10px 15px;
  }

  .bottom-banner-cta {
    column-gap: 8px;
  }
}
