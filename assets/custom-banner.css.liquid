
      {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Jost', system-ui, sans-serif;
            color: #000;
            overflow-x: hidden;
        }
        
        .custom-banner {
            width: 100%;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }
        
        /* ------------------ HEADER ------------------ */
        .banner-head {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 16px;
            padding: 10px 5%;
            background: #F5F5F5;
            width: 100%;
            height: auto;
            flex-wrap: wrap;
        }
        
        .brand {
            font-weight: 900;
            font-size: 1.25rem;
            text-transform: uppercase;
        }
        
        .banner-head__center {
            margin: 0 auto;
            text-align: center;
            font-weight: 400;
            font-size: 1rem;
        }
        
        /* ------------------ HOVER EFFECT FOR TOP-RIGHT CTA ------------------ */
        .banner-head__right {
            position: relative;
            overflow: hidden;
            background: rgba(255, 245, 68, 1);
            padding: 10px 20px;
            display: flex;
            align-items: center;
            cursor: pointer;
            transition: color 0.4s ease-in-out;
        }
        
        .banner-head__right::before {
            content: "";
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: #000;
            z-index: 0;
            transition: left 0.4s ease-in-out;
        }
        
        .banner-head__right:hover::before {
            left: 0;
        }
        
        .banner-head__right .banner-cta {
            position: relative;
            z-index: 1;
            color: #000;
            font-weight: 400;
            font-size: 1rem;
            text-decoration: none;
            text-transform: uppercase;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: color 0.4s ease-in-out;
        }
        
        .banner-head__right .banner-cta img {
            width: 20px;
            height: 20px;
            filter: brightness(0);
            transition: filter 0.4s ease-in-out;
        }
        
        .banner-head__right:hover .banner-cta {
            color: #fff;
        }
        
        .banner-head__right:hover .banner-cta img {
            filter: brightness(0) invert(1);
        }
        
        /* ------------------ BODY ------------------ */
        .banner-body {
            position: relative;
            width: 100%;
            height: 100vh;
            background: linear-gradient(rgba(255, 255, 255, 0.7), rgba(255, 255, 255, 0.7)), 
                        url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" viewBox="0 0 100 100"><rect x="0" y="0" width="100" height="100" fill="%23f5f5f5"/><path d="M30,30 L70,30 L70,70 L30,70 Z" stroke="%23000" stroke-width="2" fill="none"/><circle cx="50" cy="50" r="20" stroke="%23000" stroke-width="2" fill="none"/></svg>');
            background-size: cover;
            background-position: center;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 0 5%;
            color: #000;
        }
        
        .body-text {
            position: absolute;
            top: 400px;
            left: 67px;
            max-width: 600px;
            display: flex;
            flex-direction: column;
            gap: 20px;
        }
        
        .banner-title {
            font-weight: 500;
            font-size: clamp(2rem, 6vw, 4.5rem);
            line-height: 1.1;
            margin-bottom: 1rem;
            max-width: 90%;
        }
        
        .banner-sub {
            max-width: 483px;
            position: relative;
            font-weight: 400;
            font-size: 20px;
            line-height: 1.4;
            color: #000;
            margin-top: 20px;
            white-space: normal;
            letter-spacing: 0px;
        }
        
        /* ------------------ SHOP NOW BUTTON ------------------ */
        .banner-head__bottom {
            position: relative;
            width: fit-content;
            padding: 12px 24px;
            margin-top: 1.5rem;
            background: #000;
            overflow: hidden;
            cursor: pointer;
        }
        
        .banner-head__bottom::before {
            content: "";
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: rgba(255, 245, 68, 1);
            z-index: 0;
            transition: left 0.4s ease-in-out;
        }
        
        .banner-head__bottom:hover::before {
            left: 0;
        }
        
        .bottom-banner-cta {
            position: relative;
            z-index: 1;
            font-weight: 400;
            font-size: 1rem;
            text-decoration: none;
            text-transform: uppercase;
            color: #fff;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: color 0.4s ease-in-out;
        }
        
        .bottom-btn-icon {
            width: 20px;
            height: 20px;
            filter: brightness(0) invert(1);
            transition: filter 0.4s ease-in-out;
        }
        
        .banner-head__bottom:hover .bottom-banner-cta {
            color: #000;
        }
        
        .banner-head__bottom:hover .bottom-btn-icon {
            filter: brightness(0) invert(0);
        }
        
        /* ------------------ FOOTER ------------------ */
        .banner-footer {
            background: #F5F5F5;
            min-height: 34px;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 10px;
        }
        
        .banner-bottom {
            font-size: 0.875rem;
            font-weight: 400;
            color: #000;
            margin: 0;
            text-align: center;
        }
        
        /* ------------------ RESPONSIVE FIXES ------------------ */
        @media (max-width: 768px) {
            .banner-body {
                position: relative;
                height: auto;
                min-height: 60vh;
                padding: 20px;
                justify-content: flex-start;
                background: linear-gradient(rgba(255, 255, 255, 0.7), rgba(255, 255, 255, 0.7)), 
                            url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" viewBox="0 0 100 100"><rect x="0" y="0" width="100" height="100" fill="%23f5f5f5"/><path d="M30,30 L70,30 L70,70 L30,70 Z" stroke="%23000" stroke-width="2" fill="none"/><circle cx="50" cy="50" r="20" stroke="%23000" stroke-width="2" fill="none"/></svg>');
                background-size: cover;
                background-position: center 60%; /* Position to show bottom 60% */
            }
            
            /* Overlay to create the zoomed effect for bottom 60% */
            .banner-body::before {
                content: "";
                position: absolute;
                bottom: 0;
                left: 0;
                width: 100%;
                height: 60%;
                background: linear-gradient(rgba(255, 255, 255, 0.3), rgba(255, 255, 255, 0.3)), 
                            url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" viewBox="0 0 100 100"><rect x="0" y="0" width="100" height="100" fill="%23f5f5f5"/><path d="M30,30 L70,30 L70,70 L30,70 Z" stroke="%23000" stroke-width="2" fill="none"/><circle cx="50" cy="50" r="20" stroke="%23000" stroke-width="2" fill="none"/></svg>');
                background-size: cover;
                background-position: center;
                z-index: -1;
                transform: scale(1.1); /* Zoom effect */
            }
            
            .body-text {
                position: static;
                top: auto;
                left: auto;
                transform: none;
                max-width: 100%;
                margin: 0 auto;
                text-align: center;
                gap: 15px;
                padding-top: 20px;
                z-index: 2;
            }
            
            .banner-title {
                font-size: 1.8rem;
                line-height: 1.2;
                margin-bottom: 0.5rem;
                margin-top: 0;
                width: 100%;
                text-align: center;
            }
            
            .banner-sub {
                font-size: 1rem;
                line-height: 1.5;
                margin: 0 auto;
                max-width: 90%;
                text-align: center;
                display: -webkit-box;
                -webkit-line-clamp: 2;
                -webkit-box-orient: vertical;
                overflow: hidden;
                text-overflow: ellipsis;
            }
            
            .banner-head__bottom {
                width: 100%;
                margin: 20px auto 0;
                text-align: center;
                display: flex;
                justify-content: center;
            }
            
            .bottom-banner-cta {
                justify-content: center;
                width: 100%;
            }
        }
        
        @media (max-width: 480px) {
            .banner-body {
                min-height: 50vh;
            }
            
            .banner-body::before {
                height: 60%; /* Maintain 60% on smaller screens */
                transform: scale(1.15); /* Slightly more zoom on very small screens */
            }
            
            .banner-title {
                font-size: 1.5rem;
            }
            
            .banner-sub {
                font-size: 0.9rem;
                -webkit-line-clamp: 2;
            }
            
            .banner-head__bottom {
                padding: 14px;
            }
            
            .body-text {
                margin-top: 0;
                gap: 10px;
            }
            
            .banner-head {
                flex-direction: column;
                text-align: center;
                gap: 10px;
            }
            
            .banner-head__center {
                order: 3;
                width: 100%;
            }
        }