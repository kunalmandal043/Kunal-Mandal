{% comment %}
  Custom Banner CSS with fixed mobile dropdown positioning
{% endcomment %}

.custom-banner {
  position: relative;
  width: 100%;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

/* Header bar styles */
.banner-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px 20px;
  background-color: #fff;
  border-bottom: 1px solid #eaeaea;
  position: relative;
  z-index: 1001; /* Ensure header stays above dropdown */
}

.banner-taskbar {
  display: none;
  cursor: pointer;
}

.banner-head__left,
.banner-head__center,
.banner-head__right {
  flex: 1;
  display: flex;
  align-items: center;
}

.banner-head__center {
  justify-content: center;
  text-align: center;
}

.banner-head__right {
  justify-content: flex-end;
}

.brand {
  font-weight: bold;
  font-size: 18px;
  letter-spacing: 1px;
}

.banner-cta {
  display: flex;
  align-items: center;
  gap: 8px;
  text-decoration: none;
  color: inherit;
  font-weight: 500;
  padding: 8px 16px;
  border: 1px solid #000;
  border-radius: 4px;
  transition: all 0.2s ease;
}

.banner-cta:hover {
  background-color: #000;
  color: #fff;
}

/* Body styles */
.banner-body {
  padding: 60px 20px;
  text-align: center;
  background-color: #f9f9f9;
}

.banner-title {
  font-size: 42px;
  font-weight: bold;
  margin-bottom: 20px;
}

.banner-sub {
  font-size: 18px;
  line-height: 1.6;
  max-width: 700px;
  margin: 0 auto 30px;
  color: #555;
}

.bottom-banner-cta {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  text-decoration: none;
  background-color: #000;
  color: #fff;
  padding: 12px 24px;
  border-radius: 4px;
  font-weight: 500;
  transition: opacity 0.2s ease;
}

.bottom-banner-cta:hover {
  opacity: 0.9;
}

/* Footer styles */
.banner-footer {
  padding: 15px 20px;
  background-color: #fff;
  border-top: 1px solid #eaeaea;
  text-align: center;
}

.banner-bottom {
  font-size: 14px;
  letter-spacing: 0.5px;
  text-transform: uppercase;
}

/* Mobile dropdown styles - FIXED POSITIONING */
.mobile-dropdown {
  position: absolute;
  top: 100%; /* Position directly below the header */
  left: 0;
  width: 100%;
  background: white;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  opacity: 0;
  visibility: hidden;
  transform: translateY(-10px);
  transition: all 0.3s ease;
  z-index: 1000; /* Below header but above other content */
}

.mobile-dropdown.active {
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
}

.mobile-dropdown.closing {
  opacity: 0;
  visibility: hidden;
  transform: translateY(-10px);
}

.mobile-dropdown__content {
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15px;
}

.mobile-dropdown__cta {
  display: flex;
  align-items: center;
  gap: 8px;
  text-decoration: none;
  color: inherit;
  font-weight: 500;
  padding: 8px 16px;
  border: 1px solid #000;
  border-radius: 4px;
}

/* Mobile responsiveness */
@media (max-width: 768px) {
  .banner-taskbar {
    display: block;
  }
  
  .banner-head__center,
  .banner-head__right {
    display: none;
  }
  
  .banner-head__left {
    justify-content: center;
  }
  
  .banner-body {
    padding: 40px 20px;
  }
  
  .banner-title {
    font-size: 32px;
  }
  
  .banner-sub {
    font-size: 16px;
  }
}

/* Prevent body scrolling when menu is open */
body.mobile-menu-open {
  overflow: hidden;
}