.custom-banner {
  width: 100%;
  min-height: 780px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}


/* ------------------ HEADER ------------------ */
.banner-head {
  display: flex;
  align-items: center;
  justify-content: space-between; /* left / center / right */
  gap: 16px;
  padding: 10px 50px;
  background: #F5F5F5;
  width: 100%;
  height: 64px;
}

.banner-head__left { display: flex; align-items: center; }

.brand {
  font-weight: 700;
  font-size: 20px;
  line-height: 1;
  text-transform: uppercase;
}

.banner-head__center {
  margin: 0 auto;
  text-align: center;
  color: #000;
  font-family: Jost, system-ui, sans-serif;
  font-weight: 400;
  font-size: 16px;
  line-height: 1.1;
}

.banner-head__right {
  background: rgba(255, 245, 68, 1);
  padding: 10px 20px;
  display: flex;
  align-items: center;
}

.banner-cta {
  font-family: "Jost", system-ui, sans-serif;
  font-weight: 400;
  font-size: 16px;
  text-decoration: none;
  text-align: center;
  text-transform: uppercase;
  color: #000;
  display: flex;
  align-items: center;
  gap: 8px;
  z-index:2;
  color: rgba(0, 0, 0, 1);

}


.btn-icon {
  width: 20px;
  height: 20px;
}

/* ------------------ BODY ------------------ */
.banner-body {
  position: relative;
  width: 100%;
  height: 100vh; /* or whatever body height you want */
  background: url('{{ "bg-img.svg" | asset_url }}') no-repeat center center;
  background-size: 100% 100%; /* stretch to fit, no crop, no gaps */
}


.body-text {
  margin-left: 67px;
  max-width: 600px;
  
}


.banner-title {

  width: 459px;
  height: 70px;
  position: absolute; /* since top/left are given */
  top: 489px;
  left: 67px;

  font-family: "Jost", sans-serif;
  font-weight: 500; /* Medium = 500 */
  font-style: normal;
  font-size: 70px;
  line-height: 100%; /* same as design */
  letter-spacing: 0px;
  vertical-align: middle;
  opacity: 1;
  transform: rotate(0deg); /* angle */
}


.banner-sub {
  display : flex;
  flex-wrap:wrap;
  width: 483px;
  height: 84px;
  position: absolute; /* needed for top/left positioning */
  top: 609px;
  left: 67px;

  font-family: "Jost", sans-serif;
  font-weight: 400; /* Regular */
  font-style: normal;
  font-size: 20px;
  line-height: 140%;
  letter-spacing: 0px;
  vertical-align: middle;

  opacity: 1;
  transform: rotate(0deg);
}



.banner-head__bottom{
  width: 220px;
  height: 50px;
  position: absolute;
  top: 743px;
  left: 67px;
  transform: rotate(0deg);
  opacity: 1;
  background: rgba(0, 0, 0, 1);

}
.bottom-banner-cta{

  font-family: "Jost", system-ui, sans-serif;
  font-weight: 400;
  font-size: 16px;
  text-transform: uppercase;
  color: #000;
  display: flex;
  align-items: center;
  justify-content: center;
  
  /* Make text vertical */
  writing-mode: vertical-rl; /* vertical top-to-bottom */
  text-orientation: upright; 
}


.bottom-btn-icon{


  
  color: rgba(255, 255, 255, 1);
}
/* ------------------ FOOTER ------------------ */
.banner-footer {
  background: rgba(245, 245, 245, 1);
  height: 34px;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 20px;
}

.banner-bottom {
  font-family: "Jost", system-ui, sans-serif;
  font-size: 14px;
  font-weight: 400;
  color: #000;
  margin: 0;
  text-align: center;
}
