.custom-banner {
  width: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: relative;
}

/* ------------------ HEADER ------------------ */
.banner-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16px;
  padding: 10px 5%;
  background: #F5F5F5;
  width: 100%;
  height: auto;
  flex-wrap: wrap;
  position: relative;
  z-index: 1001;
}

.brand {
  font-weight: 900;
  font-size: 1.25rem;
  text-transform: uppercase;
}

.banner-head__center {
  margin: 0 auto;
  text-align: center;
  font-family: Jost, system-ui, sans-serif;
  font-weight: 400;
  font-size: 1rem;
}
.banner-taskbar{
  display:none;
}

/* ------------------ HOVER EFFECT FOR TOP-RIGHT CTA ------------------ */
.banner-head__right {
  position: relative;
  overflow: hidden;
  background: rgba(255, 245, 68, 1);
  padding: 10px 20px;
  display: flex;
  align-items: center;
  cursor: pointer;
  transition: color 0.4s ease-in-out;
}

/* Sliding black overlay */
.banner-head__right::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: #000;
  z-index: 0;
  transition: left 0.4s ease-in-out;
}

.banner-head__right:hover::before {
  left: 0;
}

.banner-head__right .banner-cta {
  position: relative;
  z-index: 1;
  color: #000;
  font-weight: 400;
  font-family: "Jost", system-ui, sans-serif;
  font-size: 1rem;
  text-decoration: none;
  text-transform: uppercase;
  display: flex;
  align-items: center;
  gap: 8px;
  transition: color 0.4s ease-in-out;
}

.banner-head__right .banner-cta img {
  width: 20px;
  height: 20px;
  filter: brightness(0);
  transition: filter 0.4s ease-in-out;
}

.banner-head__right:hover .banner-cta {
  color: #fff;
}

.banner-head__right:hover .banner-cta img {
  filter: brightness(0) invert(1);
}

/* ------------------ BODY ------------------ */
.banner-body {
  position: relative;
  width: 100%;
  height: 100vh;
  background: url('{{ "bg-img.svg" | asset_url }}') no-repeat center center;
  background-size: cover;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 5%;
  color: #000;
}

.body-text {
  position: absolute;
  top: 400px;
  left: 67px;
  max-width: 600px;
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.banner-title {
  font-family: "Jost", sans-serif;
  font-weight: 500;
  font-size: clamp(2rem, 6vw, 4.5rem);
  line-height: 1.1;
  margin-bottom: 1rem;
  max-width: 90%;
}

.banner-sub {
  max-width: 483px;
  position: relative;
  font-family: "Jost", sans-serif;
  font-weight: 400;
  font-size: 20px;
  line-height: 1.4;
  color: #000;
  margin-top: 20px;
  white-space: normal;
  letter-spacing: 0px;
}

/* ------------------ SHOP NOW BUTTON ------------------ */
.banner-head__bottom {
  position: relative;
  width: fit-content;
  padding: 12px 24px;
  margin-top: 1.5rem;
  background: #000;
  overflow: hidden;
  cursor: pointer;
}

.banner-head__bottom::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: rgba(255, 245, 68, 1);
  z-index: 0;
  transition: left 0.4s ease-in-out;
}

.banner-head__bottom:hover::before {
  left: 0;
}

.bottom-banner-cta {
  position: relative;
  z-index: 1;
  font-family: "Jost", system-ui, sans-serif;
  font-weight: 400;
  font-size: 1rem;
  text-decoration: none;
  text-transform: uppercase;
  color: #fff;
  display: flex;
  align-items: center;
  gap: 8px;
  transition: color 0.4s ease-in-out;
}

.bottom-btn-icon {
  width: 20px;
  height: 20px;
  filter: brightness(0) invert(1);
  transition: filter 0.4s ease-in-out;
}

.banner-head__bottom:hover .bottom-banner-cta {
  color: #000;
}

.banner-head__bottom:hover .bottom-btn-icon {
  filter: brightness(0) invert(0);
}

/* ------------------ FOOTER ------------------ */
.banner-footer {
  background: #F5F5F5;
  min-height: 34px;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10px;
}

.banner-bottom {
  font-family: "Jost", system-ui, sans-serif;
  font-size: 0.875rem;
  font-weight: 400;
  color: #000;
  margin: 0;
  text-align: center;
}

/* ------------------ SMOOTH MOBILE DROPDOWN ------------------ */
.mobile-dropdown {
  position: absolute; /* Position below banner-head */
  top: 100%;
  left: 0;
  width: 100%;
  background: #F5F5F5;
  overflow: hidden;
  max-height: 0;
  opacity: 0;
  transition: max-height 0.3s ease, opacity 0.3s ease;
  z-index: 1000;
  display: flex;
  justify-content: center;
}

.mobile-dropdown.active {
  max-height: 500px; /* adjust according to content */
  opacity: 1;
}

.mobile-dropdown.closing {
  max-height: 0;
  opacity: 0;
}

.mobile-dropdown__content {
  width: 90%;
  max-width: 400px;
  border-radius: 8px;
  padding: 30px 20px;
  display: flex;
  flex-direction: column;
  gap: 25px;
  align-items: center;
  box-shadow: 0 5px 25px rgba(0, 0, 0, 0.2);
  transform: translateY(-20px);
  transition: transform 0.3s ease;
}

.mobile-dropdown.active .mobile-dropdown__content {
  transform: translateY(0);
}

.mobile-dropdown.closing .mobile-dropdown__content {
  transform: translateY(-20px);
}

.mobile-dropdown__center {
  font-family: Jost, system-ui, sans-serif;
  font-weight: 400;
  font-size: 1.1rem;
  text-align: center;
  color: #000;
}

.mobile-dropdown__cta {
  display: flex;
  align-items: center;
  gap: 8px;
  font-family: "Jost", system-ui, sans-serif;
  font-weight: 400;
  font-size: 1rem;
  text-decoration: none;
  text-transform: uppercase;
  color: #000;
  padding: 12px 24px;
  background: rgba(255, 245, 68, 1);
  border-radius: 4px;
  transition: all 0.3s ease;
}

.mobile-dropdown__cta:hover {
  background: #000;
  color: #fff;
}

.mobile-dropdown__cta:hover img {
  filter: brightness(0) invert(1);
}

/* Prevent body scrolling when menu is open */
body.mobile-menu-open {
  overflow: hidden;
}

/* ------------------ RESPONSIVE ------------------ */
@media (max-width: 768px) {
  .banner-taskbar {
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    left: 16px;
    top: 50%;
    transform: translateY(-50%);
    cursor: pointer;
    z-index: 10001;
  }
  .banner-head__center,
  .banner-head__right {
    display: none !important;
  }
  .banner-head__left {
    margin: 0;
    flex: 1;
    display: flex;
    justify-content: center;
  }
}
