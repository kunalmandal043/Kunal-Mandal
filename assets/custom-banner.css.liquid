.custom-banner {
  width: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/* ------------------ HEADER ------------------ */
.banner-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16px;
  padding: 10px 5%;
  background: #F5F5F5;
  width: 100%;
  height: auto;
  flex-wrap: wrap;
}

.brand {
  font-weight: 900;
  font-size: 1.25rem;
  text-transform: uppercase;
}

.banner-head__center {
  margin: 0 auto;
  text-align: center;
  font-family: Jost, system-ui, sans-serif;
  font-weight: 400;
  font-size: 1rem;
}

/* ------------------ HOVER EFFECT FOR TOP-RIGHT CTA ------------------ */
.banner-head__right {
  position: relative; /* for pseudo overlay */
  overflow: hidden;
  background: rgba(255, 245, 68, 1); /* initial yellow */
  padding: 10px 20px;
  display: flex;
  align-items: center;
  cursor: pointer;
  transition: color 0.4s ease-in-out;
}

/* Sliding black overlay */
.banner-head__right::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: #000; /* black overlay */
  z-index: 0;
  transition: left 0.4s ease-in-out;
}

.banner-head__right:hover::before {
  left: 0; /* slide overlay from left to right */
}

/* Text + arrow inside top-right button */
.banner-head__right .banner-cta {
  position: relative;
  z-index: 1; /* above overlay */
  color: #000; /* initial black text */
  font-weight: 400;
  font-family: "Jost", system-ui, sans-serif;
  font-size: 1rem;
  text-decoration: none;
  text-transform: uppercase;
  display: flex;
  align-items: center;
  gap: 8px;
  transition: color 0.4s ease-in-out;
}

/* Arrow image */
.banner-head__right .banner-cta img {
  width: 20px;
  height: 20px;
  filter: brightness(0); /* initial black arrow */
  transition: filter 0.4s ease-in-out;
}

/* Hover effect for text and arrow */
.banner-head__right:hover .banner-cta {
  color: #fff; /* text turns white */
}

.banner-head__right:hover .banner-cta img {
  filter: brightness(0) invert(1); /* arrow turns white */
}

/* ------------------ BODY ------------------ */
.banner-body {
  position: relative;
  width: 100%;
  height: 100vh;
  background: url('{{ "bg-img.svg" | asset_url }}') no-repeat center center;
  background-size: cover;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 5%;
  color: #000;
}

.body-text {
  position: absolute;
  top: 400px;   /* fixed 489px from top */
  left: 67px;   /* same as your design */
  max-width: 600px;

  display: flex;
  flex-direction: column; /* stack title and subtitle */
  gap: 20px; /* space between title and sub text */
}

.banner-title {
  font-family: "Jost", sans-serif;
  font-weight: 500;
  font-size: clamp(2rem, 6vw, 4.5rem);
  line-height: 1.1;
  margin-bottom: 1rem;
  max-width: 90%;
}

.banner-sub {
  max-width: 483px;       /* enough room for wrapping */
  position: relative;     /* no need absolute unless exact placement */
  font-family: "Jost", sans-serif;
  font-weight: 400;
  font-size: 20px;
  line-height: 1.4;       /* better readability */
  color: #000;            /* make sure text is visible */
  margin-top: 20px;       /* spacing below title */
  white-space: normal;    /* allow wrapping naturally */
  letter-spacing:0px;
}

/* ------------------ SHOP NOW BUTTON ------------------ */
.banner-head__bottom {
  position: relative;
  width: fit-content;
  padding: 12px 24px;
  margin-top: 1.5rem;
  background: #000; /* black default */
  overflow: hidden;
  cursor: pointer;
}

/* Sliding yellow overlay */
.banner-head__bottom::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: rgba(255, 245, 68, 1); /* yellow */
  z-index: 0;
  transition: left 0.4s ease-in-out;
}

.banner-head__bottom:hover::before {
  left: 0; /* slides in from left */
}

/* Text + arrow container */
.bottom-banner-cta {
  position: relative;
  z-index: 1; /* above overlay */
  font-family: "Jost", system-ui, sans-serif;
  font-weight: 400;
  font-size: 1rem;
  text-decoration: none;
  text-transform: uppercase;
  color: #fff; /* default white */
  display: flex;
  align-items: center;
  gap: 8px;
  transition: color 0.4s ease-in-out;
}

/* Arrow image */
.bottom-btn-icon {
  width: 20px;
  height: 20px;
  filter: brightness(0) invert(1); /* makes arrow white */
  transition: filter 0.4s ease-in-out;
}

/* Hover effects */
.banner-head__bottom:hover .bottom-banner-cta {
  color: #000; /* text turns black */
}

.banner-head__bottom:hover .bottom-btn-icon {
  filter: brightness(0) invert(0); /* arrow turns black */
}

/* ------------------ FOOTER ------------------ */
.banner-footer {
  background: #F5F5F5;
  min-height: 34px;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10px;
}

.banner-bottom {
  font-family: "Jost", system-ui, sans-serif;
  font-size: 0.875rem;
  font-weight: 400;
  color: #000;
  margin: 0;
  text-align: center;
}

/* ------------------ RESPONSIVE FIXES ------------------ */
@media (max-width: 768px) {
  .banner-body {
    position: relative;
    min-height: 80vh;
    justify-content: flex-start;
    background: none;
    overflow: hidden;
    --mobile-zoom: 1.1; /* ← tweak: 1.2 (mild) … 2.0+ (strong) */
  }

  .banner-body::before {
    content: "";
    position: absolute;
    bottom: 0;             /* lock to extreme bottom */
    left: 50%;
    transform: translateX(-80%);
    
    width: 100%;
    height: 100%;          /* fill the whole banner-body */
    background: url('{{ "mobile-bg-img.svg" | asset_url }}') no-repeat center bottom;
    /* Fallback zoom */
    background-size: 180% auto;
    /* Variable-driven zoom (takes precedence when supported) */
    background-size: calc(100% * var(--mobile-zoom)) auto;
    background-position: center bottom;
    z-index: -1;
    pointer-events: none;
  }

  .body-text {
    position: static;
    top: auto;
    left: auto;
    transform: none;
    max-width: 100%;
    margin: 0 auto;
    text-align: center;
    gap: 15px;
    padding-top: 20px;
    z-index: 2;
  }

  .banner-title {
    font-size: 1.8rem;
    line-height: 1.2;
    margin-bottom: 0.5rem;
    margin-top: 0;
    width: 100%;
    text-align: center;
  }

  .banner-sub {
    font-size: 1rem;
    line-height: 1.5;
    margin: 0 auto;
    max-width: 90%;
    text-align: center;
    /* Show only the first part of the text */
    display: -webkit-box;
    -webkit-line-clamp: 2; /* Limit to 2 lines */
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .banner-head__bottom {
    width: 100%;
    margin: 20px auto 0;
    text-align: center;
    display: flex;
    justify-content: center;
  }

  .bottom-banner-cta {
    justify-content: center;
    width: 100%;
  }
}