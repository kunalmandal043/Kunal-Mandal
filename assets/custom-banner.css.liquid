.custom-banner{
  width: 1440px;
  min-height: 780px;                 /* or use padding to control height */
  background-image: url('{{ "bg-img.svg" | asset_url }}');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
 
}

/* Header bar */
.banner-head{
  display: flex;
  align-items: center;
  justify-content: space-between;    /* left / center / right */
  gap: 16px;                         /* not 360px fixed */
  padding: 10px 50px;
  background: #F5F5F5;
  width: 100%;
  height: 64px;                      /* optional; can be auto */
}

/* Left brand */
.banner-head__left{ display:flex; align-items:center; }
.brand{
  font-weight: 700;                   /* not text:bold; */
  font-size: 20px;
  line-height: 1;
  /* remove fixed width/height to avoid clipping */
}

/* Center note */
.banner-head__center{
  margin: 0 auto;
  text-align: center;
  color: #000;                        /* not text:#000000; */
  font-family: Jost, system-ui, sans-serif;
  font-weight: 400;
  font-size: 16px;
  line-height: 1.1;
  /* remove width/height/angle/leading-trim */
}

.banner-head__right{
  width: 207px;
  height: 44px;
  background: rgba(255, 245, 68, 1);

  display : flex;
}

.banner-cta{
  width: 102px;
  height: 21px;
  opacity: 1;

  position: relative;      /* add positioning if top/left should apply */
  top: 11.67px;
  left: 41px;

  font-family: "Jost", system-ui, sans-serif;
  font-weight: 400;
  font-style: normal;      /* “Regular” → normal */
  font-size: 16px;
  line-height: 20.48px;    /* or 1.28 */
  letter-spacing: 0;
  padding-right: 44px;
  text-align: center;
  text-transform: uppercase;
  text: rgba(0, 0, 0, 1);

}


.banner-cta::after{
  content: "→";                       /* arrow glyph */
  position: absolute;
  right: 14px;                        /* space from the edge of the button */
  top: 50%;
  transform: translateY(-50%);
  font-weight: 700;                   /* bold like the design */
  line-height: 1;
  color: inherit;                     /* match button text color */
  pointer-events: none;               /* click passes through */
}

/* Optional: small nudge on hover */
.banner-cta:hover::after{
  transform: translate(2px, -50%);    /* slide arrow a bit to the right */
}



